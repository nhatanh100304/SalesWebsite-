{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport itemsFood from '@/data/itemsFood';\nimport cart from '@/data/cart';\nimport items from '@/data/items';\nexport default {\n  data() {\n    return {\n      itemsFood: itemsFood.map(item => ({\n        ...item,\n        selectedQuantity: 1\n      })),\n      // Khởi tạo số lượng ban đầu là 1\n      cart: cart\n    };\n  },\n  methods: {\n    increaseSelectedQuantity(item) {\n      const prod = items.find(i => i.id == item.id);\n      if (prod && item.selectedQuantity < prod.quantity) {\n        // Kiểm tra prod tồn tại và số lượng chưa vượt quá\n        item.selectedQuantity++;\n        prod.quantity--;\n      } else {\n        alert(\"Không đủ số lượng sản phẩm trong kho\");\n      }\n    },\n    decreaseSelectedQuantity(item) {\n      const prod = items.find(i => i.id == item.id);\n      if (prod && item.selectedQuantity > 1) {\n        // Kiểm tra prod tồn tại và số lượng lớn hơn 1\n        item.selectedQuantity--;\n        prod.quantity++;\n      } else if (prod) {\n        this.deleteproduct(item);\n        prod.quantity++;\n      }\n    },\n    addToCart(product) {\n      const cartItem = this.cart.find(item => item.id === product.id);\n      if (cartItem && product.quanlity > 0) {\n        cartItem.quantity += 1;\n        alert(\"Sản phẩm được cập nhật trong giỏ hàng\");\n      } else {\n        if (product.quanlity > 0) {\n          const newproduct = {\n            ...product,\n            quantity: 1\n          };\n          this.cart.push(newproduct);\n        }\n        alert(\"Sản phẩm được thêm vào giỏ hàng\");\n      }\n      product.selectedQuantity = 1; // Đặt lại số lượng sau khi thêm vào giỏ hàng\n      product.quanlity--;\n    }\n  }\n};","map":{"version":3,"names":["itemsFood","cart","items","data","map","item","selectedQuantity","methods","increaseSelectedQuantity","prod","find","i","id","quantity","alert","decreaseSelectedQuantity","deleteproduct","addToCart","product","cartItem","quanlity","newproduct","push"],"sources":["D:\\Thứ 4\\food\\src\\components\\MenuPage.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    <h1>Thực Đơn</h1>\r\n    <div class=\"product-list\">\r\n      <div \r\n        v-for=\"item in itemsFood\" \r\n        :key=\"item.id\" \r\n        class=\"product-card\" \r\n      >\r\n        <img :src=\"item.image\" :alt=\"item.title\" />\r\n        <h3>{{ item.title }}</h3>\r\n        <p>{{ item.description }}</p>\r\n        <div class=\"product-price\">{{ item.price.toLocaleString() }} VNĐ</div>\r\n\r\n        <!-- Nút điều khiển số lượng trước khi thêm vào giỏ -->\r\n        <div class=\"quantity-controls\">\r\n          <button @click=\"decreaseSelectedQuantity(item)\">-</button>\r\n          <span>{{ item.selectedQuantity }}</span>\r\n          <button @click=\"increaseSelectedQuantity(item)\">+</button>\r\n        </div>\r\n        \r\n        <button @click=\"addToCart(item)\">Add to Cart</button>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport itemsFood from '@/data/itemsFood';\r\nimport cart from '@/data/cart';\r\nimport items from '@/data/items';\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      itemsFood: itemsFood.map(item => ({ ...item, selectedQuantity: 1 })), // Khởi tạo số lượng ban đầu là 1\r\n      cart: cart, \r\n    };\r\n  },\r\n  methods: {\r\n    increaseSelectedQuantity(item) {\r\n      const prod = items.find(i => i.id == item.id);\r\n      if (prod && item.selectedQuantity < prod.quantity) { // Kiểm tra prod tồn tại và số lượng chưa vượt quá\r\n        item.selectedQuantity++;\r\n        prod.quantity--;\r\n      } else {\r\n        alert(\"Không đủ số lượng sản phẩm trong kho\");\r\n      }\r\n    },\r\n    decreaseSelectedQuantity(item) {\r\n      const prod = items.find(i => i.id == item.id);\r\n      if (prod && item.selectedQuantity > 1) { // Kiểm tra prod tồn tại và số lượng lớn hơn 1\r\n        item.selectedQuantity--;\r\n        prod.quantity++;\r\n      } else if (prod) {\r\n        this.deleteproduct(item);\r\n        prod.quantity++;\r\n      }\r\n    },\r\n    addToCart(product) {\r\n      const cartItem = this.cart.find(item => item.id === product.id);\r\n      if (cartItem &&   product.quanlity>0) {\r\n        cartItem.quantity +=1\r\n        alert(\"Sản phẩm được cập nhật trong giỏ hàng\");\r\n      } else {\r\n        if(product.quanlity > 0){\r\n          const newproduct={...product,quantity:1}\r\n          this.cart.push(newproduct)\r\n\r\n        }\r\n        alert(\"Sản phẩm được thêm vào giỏ hàng\");\r\n      }\r\n      product.selectedQuantity = 1; // Đặt lại số lượng sau khi thêm vào giỏ hàng\r\n      product.quanlity --\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n\r\n<style scoped>\r\n/* Style cho thực đơn */\r\nh1 {\r\n  text-align: center;\r\n  margin-top: 30px;\r\n  font-size: 36px;\r\n  color: #333;\r\n}\r\n\r\n/* Danh sách sản phẩm */\r\n.product-list {\r\n  display: grid;\r\n  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));\r\n  gap: 20px;\r\n  padding: 20px;\r\n}\r\n\r\n/* Thẻ sản phẩm */\r\n.product-card {\r\n  background-color: #fff;\r\n  border: 1px solid #ddd;\r\n  border-radius: 8px;\r\n  padding: 15px;\r\n  text-align: center;\r\n  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);\r\n  transition: transform 0.3s ease, box-shadow 0.3s ease;\r\n  cursor: pointer;\r\n}\r\n\r\n.product-card:hover {\r\n  transform: scale(1.05);\r\n  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);\r\n}\r\n\r\n.product-card img {\r\n  width: 100%;\r\n  height: 180px;\r\n  object-fit: cover;\r\n  border-radius: 8px;\r\n  margin-bottom: 10px;\r\n}\r\n\r\n.product-card h3 {\r\n  font-size: 20px;\r\n  margin: 10px 0;\r\n  color: #333;\r\n}\r\n\r\n.product-card p {\r\n  font-size: 14px;\r\n  color: #555;\r\n}\r\n\r\n.product-card .product-price {\r\n  font-size: 16px;\r\n  color: #fcb034;\r\n  margin: 10px 0;\r\n}\r\n\r\n/* Nút thêm vào giỏ */\r\n.product-card button {\r\n  background-color: #fcb034;\r\n  color: white;\r\n  padding: 10px 20px;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n  font-size: 16px;\r\n}\r\n\r\n.product-card button:hover {\r\n  background-color: #e69526;\r\n}\r\n\r\n/* Điều khiển số lượng */\r\n.quantity-controls {\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  gap: 10px;\r\n  margin: 10px 0;\r\n}\r\n\r\n.quantity-controls button {\r\n  padding: 5px 10px;\r\n  background-color: #fcb034;\r\n  color: white;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n}\r\n\r\n.quantity-controls button:hover {\r\n  background-color: #e69526;\r\n}\r\n\r\n.quantity-controls span {\r\n  font-size: 16px;\r\n}\r\n</style>\r\n"],"mappings":";AA4BA,OAAOA,SAAQ,MAAO,kBAAkB;AACxC,OAAOC,IAAG,MAAO,aAAa;AAC9B,OAAOC,KAAI,MAAO,cAAc;AAEhC,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLH,SAAS,EAAEA,SAAS,CAACI,GAAG,CAACC,IAAG,KAAM;QAAE,GAAGA,IAAI;QAAEC,gBAAgB,EAAE;MAAE,CAAC,CAAC,CAAC;MAAE;MACtEL,IAAI,EAAEA;IACR,CAAC;EACH,CAAC;EACDM,OAAO,EAAE;IACPC,wBAAwBA,CAACH,IAAI,EAAE;MAC7B,MAAMI,IAAG,GAAIP,KAAK,CAACQ,IAAI,CAACC,CAAA,IAAKA,CAAC,CAACC,EAAC,IAAKP,IAAI,CAACO,EAAE,CAAC;MAC7C,IAAIH,IAAG,IAAKJ,IAAI,CAACC,gBAAe,GAAIG,IAAI,CAACI,QAAQ,EAAE;QAAE;QACnDR,IAAI,CAACC,gBAAgB,EAAE;QACvBG,IAAI,CAACI,QAAQ,EAAE;MACjB,OAAO;QACLC,KAAK,CAAC,sCAAsC,CAAC;MAC/C;IACF,CAAC;IACDC,wBAAwBA,CAACV,IAAI,EAAE;MAC7B,MAAMI,IAAG,GAAIP,KAAK,CAACQ,IAAI,CAACC,CAAA,IAAKA,CAAC,CAACC,EAAC,IAAKP,IAAI,CAACO,EAAE,CAAC;MAC7C,IAAIH,IAAG,IAAKJ,IAAI,CAACC,gBAAe,GAAI,CAAC,EAAE;QAAE;QACvCD,IAAI,CAACC,gBAAgB,EAAE;QACvBG,IAAI,CAACI,QAAQ,EAAE;MACjB,OAAO,IAAIJ,IAAI,EAAE;QACf,IAAI,CAACO,aAAa,CAACX,IAAI,CAAC;QACxBI,IAAI,CAACI,QAAQ,EAAE;MACjB;IACF,CAAC;IACDI,SAASA,CAACC,OAAO,EAAE;MACjB,MAAMC,QAAO,GAAI,IAAI,CAAClB,IAAI,CAACS,IAAI,CAACL,IAAG,IAAKA,IAAI,CAACO,EAAC,KAAMM,OAAO,CAACN,EAAE,CAAC;MAC/D,IAAIO,QAAO,IAAOD,OAAO,CAACE,QAAQ,GAAC,CAAC,EAAE;QACpCD,QAAQ,CAACN,QAAO,IAAI;QACpBC,KAAK,CAAC,uCAAuC,CAAC;MAChD,OAAO;QACL,IAAGI,OAAO,CAACE,QAAO,GAAI,CAAC,EAAC;UAC