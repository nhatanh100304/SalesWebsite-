{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport items from '@/data/items'; // Tải dữ liệu sản phẩm\nimport ProductDetailPopup from './ProductDetailPopup.vue'; // Import component chi tiết sản phẩm\n\nexport default {\n  components: {\n    ProductDetailPopup\n  },\n  data() {\n    return {\n      items,\n      selectedProduct: null,\n      showPopup: false,\n      cart: []\n    };\n  },\n  methods: {\n    openProductDetail(product) {\n      this.selectedProduct = product;\n      this.showPopup = true;\n    },\n    addToCart(product) {\n      const cartItem = this.cart.find(item => item.id === product.id);\n      if (cartItem) {\n        cartItem.quantity += 1;\n      } else {\n        this.cart.push({\n          ...product,\n          quantity: 1\n        });\n      }\n    }\n  }\n};","map":{"version":3,"names":["items","ProductDetailPopup","components","data","selectedProduct","showPopup","cart","methods","openProductDetail","product","addToCart","cartItem","find","item","id","quantity","push"],"sources":["D:\\Thứ 4\\food\\src\\components\\MenuPage.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    <h1>Thực Đơn</h1>\r\n    \r\n    <!-- Danh sách sản phẩm -->\r\n    <div class=\"product-list\">\r\n      <div \r\n        v-for=\"item in items\" \r\n        :key=\"item.id\" \r\n        class=\"product-card\" \r\n        @click=\"openProductDetail(item)\"\r\n      >\r\n        <img :src=\"item.image\" :alt=\"item.title\" />\r\n        <h3>{{ item.title }}</h3>\r\n        <p>{{ item.description }}</p>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- Khung Chi Tiết Sản Phẩm -->\r\n    <ProductDetailPopup \r\n      v-if=\"selectedProduct\"\r\n      :product=\"selectedProduct\" \r\n      :show=\"showPopup\" \r\n      @add-to-cart=\"addToCart\"\r\n      @close=\"showPopup = false\"\r\n    />\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport items from '@/data/items'; // Tải dữ liệu sản phẩm\r\nimport ProductDetailPopup from './ProductDetailPopup.vue'; // Import component chi tiết sản phẩm\r\n\r\nexport default {\r\n  components: {\r\n    ProductDetailPopup\r\n  },\r\n  data() {\r\n    return {\r\n      items,\r\n      selectedProduct: null,\r\n      showPopup: false,\r\n      cart: [],\r\n    };\r\n  },\r\n  methods: {\r\n    openProductDetail(product) {\r\n      this.selectedProduct = product;\r\n      this.showPopup = true;\r\n    },\r\n    addToCart(product) {\r\n      const cartItem = this.cart.find((item) => item.id === product.id);\r\n      if (cartItem) {\r\n        cartItem.quantity += 1;\r\n      } else {\r\n        this.cart.push({ ...product, quantity: 1 });\r\n      }\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n/* Style cho thực đơn */\r\nh1 {\r\n  text-align: center;\r\n  margin-top: 30px;\r\n  font-size: 36px;\r\n  color: #333;\r\n}\r\n\r\n/* Danh sách sản phẩm */\r\n.product-list {\r\n  display: grid;\r\n  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); /* Grid layout với kích thước tự động */\r\n  gap: 20px;\r\n  padding: 20px;\r\n}\r\n\r\n/* Thẻ sản phẩm */\r\n.product-card {\r\n  background-color: #fff;\r\n  border: 1px solid #ddd;\r\n  border-radius: 8px;\r\n  padding: 15px;\r\n  text-align: center;\r\n  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);\r\n  transition: transform 0.3s ease, box-shadow 0.3s ease;\r\n  cursor: pointer;\r\n}\r\n\r\n.product-card:hover {\r\n  transform: scale(1.05);\r\n  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);\r\n}\r\n\r\n.product-card img {\r\n  width: 100%;\r\n  height: 180px;\r\n  object-fit: cover;\r\n  border-radius: 8px;\r\n  margin-bottom: 10px;\r\n}\r\n\r\n.product-card h3 {\r\n  font-size: 20px;\r\n  margin: 10px 0;\r\n  color: #333;\r\n}\r\n\r\n.product-card p {\r\n  font-size: 14px;\r\n  color: #555;\r\n}\r\n\r\n/* Popup chi tiết sản phẩm */\r\n.product-popup {\r\n  position: fixed;\r\n  top: 0;\r\n  left: 0;\r\n  right: 0;\r\n  bottom: 0;\r\n  background: rgba(0, 0, 0, 0.5);\r\n  display: flex;\r\n  justify-content: cente