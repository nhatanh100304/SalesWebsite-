{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport items from '@/data/items';\nimport cart from '@/data/cart';\nexport default {\n  data() {\n    return {\n      product: {},\n      cart: cart\n    };\n  },\n  mounted() {\n    const id = this.$route.params.id;\n    this.product = items.find(x => x.id == id);\n  },\n  methods: {\n    // Kiểm tra nếu sản phẩm đã có trong giỏ và nếu số lượng đã đầy\n    isOutOfStock(product) {\n      const productInCart = this.cart.find(item => item.id === product.id);\n      return productInCart && productInCart.quantity >= product.quantity;\n    },\n    // Thêm sản phẩm vào giỏ hàng\n    addToCart(product) {\n      const productInCart = this.cart.find(item => item.id === product.id);\n      if (productInCart) {\n        if (productInCart.quantity < product.quantity) {\n          productInCart.quantity += 1;\n          alert(\"Sản phẩm đã được thêm vào giỏ hàng.\");\n        } else {\n          alert(\"Không đủ số lượng trong kho!\");\n        }\n      } else {\n        if (product.quantity > 0) {\n          const newProduct = {\n            ...product,\n            quantity: 1\n          };\n          this.cart.push(newProduct);\n          alert(\"Sản phẩm đã được thêm vào giỏ hàng.\");\n        } else {\n          alert(\"Không đủ số lượng trong kho!\");\n        }\n      }\n    }\n  }\n};","map":{"version":3,"names":["items","cart","data","product","mounted","id","$route","params","find","x","methods","isOutOfStock","productInCart","item","quantity","addToCart","alert","newProduct","push"],"sources":["D:\\Thứ 4\\food\\src\\components\\DetailCard.vue"],"sourcesContent":["<template>\r\n  <div class=\"menu\">\r\n    <h2 class=\"menu-title\">Taste Our Foods & Enjoy</h2>\r\n    <div class=\"menu-item-detail\">\r\n      <!-- Phần hình ảnh -->\r\n      <div class=\"menu-item-image\">\r\n        <img :src=\"product.image\" alt=\"Product Image\">\r\n      </div>\r\n      \r\n      <!-- Phần mô tả -->\r\n      <div class=\"menu-item-info\">\r\n        <h3>{{ product.title }}</h3>\r\n        <p>{{ product.description }}</p>\r\n        <p class=\"price\">{{ product.price.toLocaleString() }} VNĐ</p>\r\n        \r\n        <div class=\"add-to-cart\">\r\n          <button @click=\"addToCart(product)\" :disabled=\"isOutOfStock(product)\">\r\n            {{ isOutOfStock(product) ? \"Hết hàng\" : \"Add to Cart\" }}\r\n          </button>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport items from '@/data/items';\r\nimport cart from '@/data/cart';\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      product: {},\r\n      cart: cart,\r\n    };\r\n  },\r\n  mounted() {\r\n    const id = this.$route.params.id;\r\n    this.product = items.find(x => x.id == id);\r\n  },\r\n  methods: {\r\n    // Kiểm tra nếu sản phẩm đã có trong giỏ và nếu số lượng đã đầy\r\n    isOutOfStock(product) {\r\n      const productInCart = this.cart.find(item => item.id === product.id);\r\n      return productInCart && productInCart.quantity >= product.quantity;\r\n    },\r\n    // Thêm sản phẩm vào giỏ hàng\r\n    addToCart(product) {\r\n      const productInCart = this.cart.find(item => item.id === product.id);\r\n\r\n      if (productInCart) {\r\n        if (productInCart.quantity < product.quantity) {\r\n          productInCart.quantity += 1;\r\n          alert(\"Sản phẩm đã được thêm vào giỏ hàng.\");\r\n        } else {\r\n          alert(\"Không đủ số lượng trong kho!\");\r\n        }\r\n      } else {\r\n        if (product.quantity > 0) {\r\n          const newProduct = { ...product, quantity: 1 };\r\n          this.cart.push(newProduct);\r\n          alert(\"Sản phẩm đã được thêm vào giỏ hàng.\");\r\n        } else {\r\n          alert(\"Không đủ số lượng trong kho!\");\r\n        }\r\n      }\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.menu {\r\n  text-align: center;\r\n  padding: 30px;\r\n  background-color: #f9f9f9;\r\n}\r\n\r\n.menu-title {\r\n  font-size: 36px;\r\n  font-weight: bold;\r\n  margin-bottom: 20px;\r\n  color: #333;\r\n  text-transform: uppercase;\r\n}\r\n\r\n.menu-item-detail {\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n  gap: 40px;\r\n  flex-wrap: wrap;\r\n  margin-top: 20px;\r\n}\r\n\r\n.menu-item-image {\r\n  flex: 1;\r\n  max-width: 500px;\r\n}\r\n\r\n.menu-item-image img {\r\n  width: 100%;\r\n  height: auto;\r\n  border-radius: 10px;\r\n  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);\r\n}\r\n\r\n.menu-item-info {\r\n  flex: 1;\r\n  max-width: 500px;\r\n  text-align: left;\r\n  padding: 20px;\r\n  background-color: #fff;\r\n  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);\r\n  border-radius: 10px;\r\n}\r\n\r\n.menu-item-info h3 {\r\n  font-size: 26px;\r\n  margin-bottom: 15px;\r\n  font-weight: bold;\r\n}\r\n\r\n.menu-item-info p {\r\n  margin: 10px 0;\r\n  color: #666;\r\n}\r\n\r\n.price {\r\n  color: #fcb034;\r\n  font-size: 20px;\r\n  font-weight: bold;\r\n  margin-top: 15px;\r\n}\r\n\r\n.add-to-cart {\r\n  margin-top: 20px;\r\n  text-align: center;\r\n}\r\n\r\n.add-to-cart button {\r\n  background-color: #fcb034;\r\n  color: white;\r\n  font-size: 16px;\r\n  padding: 10px 20px;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n  transition: background-color 0.3s ease;\r\n}\r\n\r\n.add-to-cart button:hover {\r\n  background-color: #d99026;\r\n}\r\n\r\n.add-to-cart button:disabled {\r\n  background-color: #e0e0e0;\r\n  cursor: not-allowed;\r\n}\r\n\r\n@media (max-width: 768px) {\r\n  .menu-item-detail {\r\n    flex-direction: column;\r\n    align-items: center;\r\n  }\r\n\r\n  .menu-item-image, .menu-item-info {\r\n    max-width: 90%;\r\n  }\r\n\r\n  .menu-item-info h3 {\r\n    font-size: 22px;\r\n  }\r\n}\r\n</style>\r\n"],"mappings":";AA0BA,OAAOA,KAAI,MAAO,cAAc;AAChC,OAAOC,IAAG,MAAO,aAAa;AAE9B,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,OAAO,EAAE,CAAC,CAAC;MACXF,IAAI,EAAEA;IACR,CAAC;EACH,CAAC;EACDG,OAAOA,CAAA,EAAG;IACR