{"ast":null,"code":"import cart from '@/data/cart';\nexport default {\n  data() {\n    return {\n      cart: cart\n    };\n  },\n  computed: {\n    totalPrice() {\n      return this.cart.reduce((total, item) => total + item.price * item.quantity, 0);\n    },\n    totalQuantity() {\n      return this.cart.reduce((total, item) => total + item.quantity, 0);\n    }\n  },\n  methods: {\n    removeItem(itemId) {\n      this.cart = this.cart.filter(item => item.id !== itemId);\n      this.updateLocalStorage();\n    },\n    clearCart() {\n      this.cart = [];\n      this.updateLocalStorage();\n    },\n    updateLocalStorage() {\n      localStorage.setItem('cart', JSON.stringify(this.cart));\n    }\n  },\n  mounted() {\n    this.cart = JSON.parse(localStorage.getItem('cart')) || [];\n  }\n};","map":{"version":3,"names":["cart","data","computed","totalPrice","reduce","total","item","price","quantity","totalQuantity","methods","removeItem","itemId","filter","id","updateLocalStorage","clearCart","localStorage","setItem","JSON","stringify","mounted","parse","getItem"],"sources":["D:\\Thứ 4\\food\\src\\components\\CardPage.vue"],"sourcesContent":["<template>\r\n  <div class=\"modal-content\">\r\n    <table style=\"width: 100%;\" class=\"text-center table\">\r\n      <tr>\r\n        <th>HÌNH</th>\r\n        <th>SẢN PHẨM</th>\r\n        <th>Đơn giá</th>\r\n        <th>Số lượng</th>\r\n        <th>Tiền</th>\r\n        <th></th>\r\n      </tr>\r\n      <tr v-for=\"item in cart\" :key=\"item.id\">\r\n        <td><img :src=\"item.image\" style=\"height: 100px; width: 100px;\"></td>\r\n        <td class=\"align-middle\">{{ item.title }}</td>\r\n        <td class=\"align-middle\">{{ item.price }}</td>\r\n        <td class=\"align-middle\">{{ item.quantity }}</td>\r\n        <td class=\"align-middle\">{{ item.price * item.quantity }}</td>\r\n        <td class=\"align-middle\">\r\n          <button @click=\"removeItem(item.id)\" class=\"btn btn-danger\">Xóa</button>\r\n        </td>\r\n      </tr>\r\n      <tr>\r\n        <th></th>\r\n        <th></th>\r\n        <th>Tổng tiền</th>\r\n        <th>{{ totalQuantity }}</th>\r\n        <th>{{ totalPrice }}</th>\r\n        <th>\r\n          <button @click=\"clearCart\" class=\"btn btn-danger\">Xóa hết</button>\r\n        </th>\r\n      </tr>\r\n    </table>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport cart from '@/data/cart'\r\nexport default {\r\n  data() {\r\n    return {\r\n      cart: cart\r\n    }\r\n  },\r\n  computed: {\r\n    totalPrice() {\r\n      return this.cart.reduce((total, item) => total + item.price * item.quantity, 0);\r\n    },\r\n    totalQuantity() {\r\n      return this.cart.reduce((total, item) => total + item.quantity, 0);\r\n    }\r\n  },\r\n  methods: {\r\n    removeItem(itemId) {\r\n      this.cart = this.cart.filter(item => item.id !== itemId);\r\n      this.updateLocalStorage();\r\n    },\r\n    clearCart() {\r\n      this.cart = [];\r\n      this.updateLocalStorage();\r\n    },\r\n    updateLocalStorage() {\r\n      localStorage.setItem('cart', JSON.stringify(this.cart));\r\n    }\r\n  },\r\n  mounted() {\r\n    this.cart = JSON.parse(localStorage.getItem('cart')) || [];\r\n  }\r\n};\r\n</script>\r\n\r\n<style>\r\n/* Styles cho giỏ hàng */\r\n</style>\r\n"],"mappings":"AAoCA,OAAOA,IAAG,MAAO,aAAY;AAC7B,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLD,IAAI,EAAEA;IACR;EACF,CAAC;EACDE,QAAQ,EAAE;IACRC,UAAUA,CAAA,EAAG;MACX,OAAO,IAAI,CAACH,IAAI,CAACI,MAAM,CAAC,CAACC,KAAK,EAAEC,IAAI,KAAKD,KAAI,GAAIC,IAAI,CAACC,KAAI,GAAID,IAAI,CAACE,QAAQ,EAAE,CAAC,CAAC;IACjF,CAAC;IACDC,aAAaA,CAAA,EAAG;MACd,OAAO,IAAI,CAACT,IAAI,CAACI,MAAM,CAAC,CAACC,KAAK,EAAEC,IAAI,KAAKD,KAAI,GAAIC,IAAI,CAACE,QAAQ,EAAE,CAAC,CAAC;IACpE;EACF,CAAC;EACDE,OAAO,EAAE;IACPC,UAAUA,CAACC,MAAM,EAAE;MACjB,IAAI,CAACZ,IAAG,GAAI,IAAI,CAACA,IAAI,CAACa,MAAM,CAACP,IAAG,IAAKA,IAAI,CAACQ,EAAC,KAAMF,MAAM,CAAC;MACxD,IAAI,CAACG,kBAAkB,CAAC,CAAC;IAC3B,CAAC;IACDC,SAASA,CAAA,EAAG;MACV,IAAI,CAAChB,IAAG,GAAI,EAAE;MACd,IAAI,CAACe,kBAAkB,CAAC,CA