},\r\n            cart: cart,\r\n            \r\n        }\r\n    },\r\nmounted(){\r\n    let id=this.$route.params.id\r\n    this.product = items.find(x=>x.id==id)\r\n},\r\nmethods:{\r\n    addToCart(product) {\r\n  const infoProduct = this.cart.find(item => item.id === product.id);\r\n  if (infoProduct) {\r\n    infoProduct.quantity += 1; // Tăng số lượng lên 1\r\n    alert(\"Thêm thành công\");\r\n  } else {\r\n    const newProduct = { ...product, quantity: 1 };\r\n    this.cart.push(newProduct);\r\n    alert(\"Sản phẩm được thêm vào giỏ hàng\");\r\n  }\r\n}\r\n}\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.menu {\r\n  text-align: center;\r\n  padding: 30px;\r\n  background-color: #f9f9f9;\r\n}\r\n\r\n.menu-title {\r\n  font-size: 36px;\r\n  font-weight: bold;\r\n  margin-bottom: 20px;\r\n  color: #333;\r\n  text-transform: uppercase;\r\n}\r\n\r\n.menu-carousel {\r\n  display: flex;\r\n  justify-content: center;\r\n  flex-wrap: wrap;\r\n  gap: 20px;\r\n}\r\n\r\n.menu-item {\r\n  position: relative;\r\n  width: 300px;\r\n  height: 400px;\r\n  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);\r\n  border-radius: 10px;\r\n  overflow: hidden;\r\n  background-color: #fff;\r\n  transition: transform 0.3s ease, box-shadow 0.3s ease;\r\n}\r\n\r\n.menu-item img {\r\n  width: 100%;\r\n  height: 60%;\r\n  object-fit: cover;\r\n  transition: transform 0.3s ease;\r\n}\r\n\r\n.menu-item-info {\r\n  position: absolute;\r\n  bottom: 0;\r\n  left: 0;\r\n  right: 0;\r\n  background-color: rgba(0, 0, 0, 0.7);\r\n  color: white;\r\n  padding: 20px;\r\n  opacity: 1; /* Bỏ hiệu ứng opacity */\r\n  transition: opacity 0.3s ease; /* Đã bỏ sự chuyển đổi opacity */\r\n}\r\n\r\n.menu-item:hover {\r\n  transform: translateY(-10px);\r\n  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);\r\n}\r\n\r\n.menu-item:hover img {\r\n  transform: scale(1.05);\r\n}\r\n\r\n.menu-item-info h3 {\r\n  font-size: 22px;\r\n  margin: 0 0 10px;\r\n  font-weight: bold;\r\n}\r\n\r\n.menu-item-info p {\r\n  margin: 0;\r\n  colo