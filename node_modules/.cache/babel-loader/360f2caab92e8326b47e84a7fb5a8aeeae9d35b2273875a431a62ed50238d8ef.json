{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport itemsFood from '@/data/itemsFood';\nimport cart from '@/data/cart';\nexport default {\n  data() {\n    return {\n      itemsFood: itemsFood,\n      cart: cart\n    };\n  },\n  methods: {\n    increaseSelectedQuantity(product) {\n      if (product.selectedQuantity < product.quantity) {\n        product.selectedQuantity += 1;\n      } else {\n        alert(\"Hết hàng\");\n      }\n    },\n    decreaseSelectedQuantity(product) {\n      if (product.selectedQuantity > 1) {\n        product.selectedQuantity -= 1;\n      }\n    },\n    addToCart(product) {\n      const cartItem = this.cart.find(item => item.id === product.id);\n      if (cartItem) {\n        // Nếu sản phẩm đã có trong giỏ, kiểm tra tồn kho\n        if (cartItem.quantity + product.selectedQuantity <= product.quantity) {\n          cartItem.quantity += product.selectedQuantity;\n          alert(\"Sản phẩm được cập nhật trong giỏ hàng\");\n        } else {\n          alert(\"Số lượng yêu cầu vượt quá số lượng tồn kho\");\n        }\n      } else {\n        // Thêm sản phẩm vào giỏ hàng với số lượng đã chọn\n        if (product.selectedQuantity <= product.quantity) {\n          this.cart.push({\n            ...product,\n            quantity: product.selectedQuantity\n          });\n          alert(\"Sản phẩm được thêm vào giỏ hàng\");\n        } else {\n          alert(\"Hết hàng\");\n        }\n      }\n    }\n  }\n};","map":{"version":3,"names":["itemsFood","cart","data","methods","increaseSelectedQuantity","product","selectedQuantity","quantity","alert","decreaseSelectedQuantity","addToCart","cartItem","find","item","id","push"],"sources":["D:\\Thứ 4\\food\\src\\components\\MenuPage.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    <h1>Thực Đơn</h1>\r\n    <div class=\"product-list\">\r\n      <div \r\n        v-for=\"item in itemsFood\" \r\n        :key=\"item.id\" \r\n        class=\"product-card\" \r\n      >\r\n        <img :src=\"item.image\" :alt=\"item.title\" />\r\n        <h3>{{ item.title }}</h3>\r\n        <p>{{ item.description }}</p>\r\n        <div class=\"product-price\">{{ item.price.toLocaleString() }} VNĐ</div>\r\n\r\n        <!-- Nút điều khiển số lượng trước khi thêm vào giỏ -->\r\n        <div class=\"quantity-controls\">\r\n          <button @click=\"decreaseSelectedQuantity(item)\">-</button>\r\n          <span>{{ item.selectedQuantity }}</span>\r\n          <button @click=\"increaseSelectedQuantity(item)\">+</button>\r\n        </div>\r\n        \r\n        <button @click=\"addToCart(item)\">Add to Cart</button>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport itemsFood from '@/data/itemsFood';\r\nimport cart from '@/data/cart';\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      itemsFood: itemsFood,\r\n      cart: cart, \r\n    };\r\n  },\r\n  methods: {\r\n    increaseSelectedQuantity(product) {\r\n      if (product.selectedQuantity < product.quantity) {\r\n        product.selectedQuantity += 1;\r\n      } else {\r\n        alert(\"Hết hàng\");\r\n      }\r\n    },\r\n    decreaseSelectedQuantity(product) {\r\n      if (product.selectedQuantity > 1) {\r\n        product.selectedQuantity -= 1;\r\n      }\r\n    },\r\n    addToCart(product) {\r\n      const cartItem = this.cart.find(item => item.id === product.id);\r\n      if (cartItem) {\r\n        // Nếu sản phẩm đã có trong giỏ, kiểm tra tồn kho\r\n        if (cartItem.quantity + product.selectedQuantity <= product.quantity) {\r\n          cartItem.quantity += product.selectedQuantity;\r\n          alert(\"Sản phẩm được cập nhật trong giỏ hàng\");\r\n        } else {\r\n          alert(\"Số lượng yêu cầu vượt quá số lượng tồn kho\");\r\n        }\r\n      } else {\r\n        // Thêm sản phẩm vào giỏ hàng với số lượng đã chọn\r\n        if (product.selectedQuantity <= product.quantity) {\r\n          this.cart.push({ ...product, quantity: product.selectedQuantity });\r\n          alert(\"Sản phẩm được thêm vào giỏ hàng\");\r\n        } else {\r\n          alert(\"Hết hàng\");\r\n        }\r\n      }\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n/* Style cho thực đơn */\r\nh1 {\r\n  text-align: center;\r\n  margin-top: 30px;\r\n  font-size: 36px;\r\n  color: #333;\r\n}\r\n\r\n/* Danh sách sản phẩm */\r\n.product-list {\r\n  display: grid;\r\n  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));\r\n  gap: 20px;\r\n  padding: 20px;\r\n}\r\n\r\n/* Thẻ sản phẩm */\r\n.product-card {\r\n  background-color: #fff;\r\n  border: 1px solid #ddd;\r\n  border-radius: 8px;\r\n  padding: 15px;\r\n  text-align: center;\r\n  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);\r\n  transition: transform 0.3s ease, box-shadow 0.3s ease;\r\n  cursor: pointer;\r\n}\r\n\r\n.product-card:hover {\r\n  transform: scale(1.05);\r\n  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);\r\n}\r\n\r\n.product-card img {\r\n  width: 100%;\r\n  height: 180px;\r\n  object-fit: cover;\r\n  border-radius: 8px;\r\n  margin-bottom: 10px;\r\n}\r\n\r\n.product-card h3 {\r\n  font-size: 20px;\r\n  margin: 10px 0;\r\n  color: #333;\r\n}\r\n\r\n.product-card p {\r\n  font-size: 14px;\r\n  color: #555;\r\n}\r\n\r\n.product-card .product-price {\r\n  font-size: 16px;\r\n  color: #fcb034;\r\n  margin: 10px 0;\r\n}\r\n\r\n/* Nút thêm vào giỏ */\r\n.product-card button {\r\n  background-color: #fcb034;\r\n  color: white;\r\n  padding: 10px 20px;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n  font-size: 16px;\r\n}\r\n\r\n.product-card button:hover {\r\n  background-color: #e69526;\r\n}\r\n\r\n/* Điều khiển số lượng */\r\n.quantity-controls {\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  gap: 10px;\r\n  margin: 10px 0;\r\n}\r\n\r\n.quantity-controls button {\r\n  padding: 5px 10px;\r\n  background-color: #fcb034;\r\n  color: white;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n}\r\n\r\n.quantity-controls button:hover {\r\n  background-color: #e69526;\r\n}\r\n\r\n.quantity-controls span {\r\n  font-size: 16px;\r\n}\r\n</style>\r\n"],"mappings":";AA4BA,OAAOA,SAAQ,MAAO,kBAAkB;AACxC,OAAOC,IAAG,MAAO,aAAa;AAE9B,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLF,SAAS,EAAEA,SAAS;MACpBC,IAAI,EAAEA;IACR,CAAC;EACH,CAAC;EACDE,OAAO,EAAE;IACPC,wBAAwBA,CAACC,OAAO,EAAE;MAChC,IAAIA,OAAO,CAACC,gBAAe,GAAID,OAAO,CAACE,QAAQ,EAAE;QAC/CF,OAAO,CAACC,gBAAe,IAAK,CAAC;MAC/B,OAAO;QACLE,KAAK,CAAC,UAAU,CAAC;MACnB;IACF,CAAC;IACDC,wBAAwBA,CAACJ,OAAO,EAAE;MAChC,IAAIA,OAAO,CAACC,gBAAe,GAAI,CAAC,EAAE;QAChCD,OAAO,CAACC,gBAAe,IAAK,CAAC;MAC/B;IACF,CAAC;IACDI,SAASA,CAACL,OAAO,EAAE;MACjB,MAAMM,QAAO,GAAI,IAAI,CAACV,IAAI,CAACW,IAAI,CAACC,IAAG,IAAKA,IAAI,CAACC,EAAC,KAAMT,OAAO,CAACS,EAAE,CAAC;MAC/D,IAAIH,QAAQ,EAAE;QACZ;QACA,IAAIA,QAAQ,CAACJ,QAAO,GAAIF,OAAO,CAACC,gBAAe,IAAKD,OAAO,CAACE,QAAQ,EAAE;UACpEI,QAAQ,CAACJ,QAAO,IAAKF,OAAO,CAACC,gBAAgB;UAC7CE,KAAK,CAAC,uCAAuC,CAAC;QAChD,OAAO;UACLA,KAAK,CAAC,4CAA4C,CAAC;QACrD;MACF,OAAO;QACL;QACA,IAAIH,OAAO,CAACC,gBAAe,IAAKD,OAAO,CAACE,QAAQ,EAAE;UAChD,IAAI,CAACN,IAAI,CAACc,IAAI,CAAC;YAAE,GAAGV,OAAO;YAAEE,QAAQ,EAAEF,OAAO,CAACC;UAAiB,CAAC,CAAC;UAClEE,KAAK,CAAC,iCAAiC,CAAC;QAC1C,OAAO;UACLA,KAAK,CAAC,UAAU,CAAC;QACnB;MACF;IACF;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}