{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport itemsFood from '@/data/itemsFood'; // Thay đổi đường dẫn đến itemsFood\nimport cart from '@/data/cart';\nexport default {\n  data() {\n    return {\n      itemsFood,\n      // Sử dụng itemsFood thay vì items\n      cart: cart // Giỏ hàng của người dùng\n    };\n  },\n  methods: {\n    getCartQuantity(product) {\n      const cartItem = this.cart.find(item => item.id === product.id);\n      return cartItem ? cartItem.quantity : 0;\n    },\n    increaseQuantity(product) {\n      const cartItem = this.cart.find(item => item.id === product.id);\n      if (cartItem) {\n        if (cartItem.quantity < product.quantity) {\n          // Kiểm tra số lượng tồn kho\n          cartItem.quantity += 1;\n        } else {\n          alert(\"Hết hàng\");\n        }\n      } else {\n        this.cart.push({\n          ...product,\n          quantity: 1\n        });\n      }\n    },\n    decreaseQuantity(product) {\n      const cartItem = this.cart.find(item => item.id === product.id);\n      if (cartItem && cartItem.quantity > 1) {\n        cartItem.quantity -= 1;\n      }\n    },\n    addToCart(product) {\n      const cartItem = this.cart.find(item => item.id === product.id);\n      if (!cartItem) {\n        // Thêm sản phẩm vào giỏ hàng với số lượng ban đầu là 1\n        if (product.quantity > 0) {\n          this.cart.push({\n            ...product,\n            quantity: 1\n          });\n          alert(\"Sản phẩm được thêm vào giỏ hàng\");\n        } else {\n          alert(\"Hết hàng\");\n        }\n      } else {\n        alert(\"Sản phẩm đã có trong giỏ hàng\");\n      }\n    }\n  }\n};","map":{"version":3,"names":["itemsFood","cart","data","methods","getCartQuantity","product","cartItem","find","item","id","quantity","increaseQuantity","alert","push","decreaseQuantity","addToCart"],"sources":["D:\\Thứ 4\\food\\src\\components\\MenuPage.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    <h1>Thực Đơn</h1>\r\n    <div class=\"product-list\">\r\n      <div \r\n        v-for=\"item in itemsFood\" \r\n        :key=\"item.id\" \r\n        class=\"product-card\" \r\n      >\r\n        <img :src=\"item.image\" :alt=\"item.title\" />\r\n        <h3>{{ item.title }}</h3>\r\n        <p>{{ item.description }}</p>\r\n        <div class=\"product-price\">{{ item.price.toLocaleString() }} VNĐ</div>\r\n\r\n        <!-- Nút thêm vào giỏ -->\r\n        <div class=\"quantity-controls\">\r\n          <button @click=\"decreaseQuantity(item)\">-</button>\r\n          <span>{{ getCartQuantity(item) }}</span>\r\n          <button @click=\"increaseQuantity(item)\">+</button>\r\n        </div>\r\n        <button @click=\"addToCart(item)\">Add to Cart</button>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport itemsFood from '@/data/itemsFood'; // Thay đổi đường dẫn đến itemsFood\r\nimport cart from '@/data/cart';\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      itemsFood, // Sử dụng itemsFood thay vì items\r\n      cart: cart, // Giỏ hàng của người dùng\r\n    };\r\n  },\r\n  methods: {\r\n    getCartQuantity(product) {\r\n      const cartItem = this.cart.find(item => item.id === product.id);\r\n      return cartItem ? cartItem.quantity : 0;\r\n    },\r\n    increaseQuantity(product) {\r\n      const cartItem = this.cart.find(item => item.id === product.id);\r\n      if (cartItem) {\r\n        if (cartItem.quantity < product.quantity) { // Kiểm tra số lượng tồn kho\r\n          cartItem.quantity += 1;\r\n        } else {\r\n          alert(\"Hết hàng\");\r\n        }\r\n      } else {\r\n        this.cart.push({ ...product, quantity: 1 });\r\n      }\r\n    },\r\n    decreaseQuantity(product) {\r\n      const cartItem = this.cart.find(item => item.id === product.id);\r\n      if (cartItem && cartItem.quantity > 1) {\r\n        cartItem.quantity -= 1;\r\n      }\r\n    },\r\n    addToCart(product) {\r\n      const cartItem = this.cart.find(item => item.id === product.id);\r\n      if (!cartItem) {\r\n        // Thêm sản phẩm vào giỏ hàng với số lượng ban đầu là 1\r\n        if (product.quantity > 0) {\r\n          this.cart.push({ ...product, quantity: 1 });\r\n          alert(\"Sản phẩm được thêm vào giỏ hàng\");\r\n        } else {\r\n          alert(\"Hết hàng\");\r\n        }\r\n      } else {\r\n        alert(\"Sản phẩm đã có trong giỏ hàng\");\r\n      }\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n/* Style cho thực đơn */\r\nh1 {\r\n  text-align: center;\r\n  margin-top: 30px;\r\n  font-size: 36px;\r\n  color: #333;\r\n}\r\n\r\n/* Danh sách sản phẩm */\r\n.product-list {\r\n  display: grid;\r\n  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));\r\n  gap: 20px;\r\n  padding: 20px;\r\n}\r\n\r\n/* Thẻ sản phẩm */\r\n.product-card {\r\n  background-color: #fff;\r\n  border: 1px solid #ddd;\r\n  border-radius: 8px;\r\n  padding: 15px;\r\n  text-align: center;\r\n  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);\r\n  transition: transform 0.3s ease, box-shadow 0.3s ease;\r\n  cursor: pointer;\r\n}\r\n\r\n.product-card:hover {\r\n  transform: scale(1.05);\r\n  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);\r\n}\r\n\r\n.product-card img {\r\n  width: 100%;\r\n  height: 180px;\r\n  object-fit: cover;\r\n  border-radius: 8px;\r\n  margin-bottom: 10px;\r\n}\r\n\r\n.product-card h3 {\r\n  font-size: 20px;\r\n  margin: 10px 0;\r\n  color: #333;\r\n}\r\n\r\n.product-card p {\r\n  font-size: 14px;\r\n  color: #555;\r\n}\r\n\r\n.product-card .product-price {\r\n  font-size: 16px;\r\n  color: #fcb034;\r\n  margin: 10px 0;\r\n}\r\n\r\n/* Nút thêm vào giỏ */\r\n.product-card button {\r\n  background-color: #fcb034;\r\n  color: white;\r\n  padding: 10px 20px;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n  font-size: 16px;\r\n}\r\n\r\n.product-card button:hover {\r\n  background-color: #e69526;\r\n}\r\n\r\n/* Điều khiển số lượng */\r\n.quantity-controls {\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  gap: 10px;\r\n  margin: 10px 0;\r\n}\r\n\r\n.quantity-controls button {\r\n  padding: 5px 10px;\r\n  background-color: #fcb034;\r\n  color: white;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n}\r\n\r\n.quantity-controls button:hover {\r\n  background-color: #e69526;\r\n}\r\n\r\n.quantity-controls span {\r\n  font-size: 16px;\r\n}\r\n</style>\r\n"],"mappings":";AA2BA,OAAOA,SAAQ,MAAO,kBAAkB,EAAE;AAC1C,OAAOC,IAAG,MAAO,aAAa;AAE9B,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLF,SAAS;MAAE;MACXC,IAAI,EAAEA,IAAI,CAAE;IACd,CAAC;EACH,CAAC;EACDE,OAAO,EAAE;IACPC,eAAeA,CAACC,OAAO,EAAE;MACvB,MAAMC,QAAO,GAAI,IAAI,CAACL,IAAI,CAACM,IAAI,CAACC,IAAG,IAAKA,IAAI,CAACC,EAAC,KAAMJ,OAAO,CAACI,EAAE,CAAC;MAC/D,OAAOH,QAAO,GAAIA,QAAQ,CAACI,QAAO,GAAI,CAAC;IACzC,CAAC;IACDC,gBAAgBA,CAACN,OAAO,EAAE;MACxB,MAAMC,QAAO,GAAI,IAAI,CAACL,IAAI,CAACM,IAAI,CAACC,IAAG,IAAKA,IAAI,CAACC,EAAC,KAAMJ,OAAO,CAACI,EAAE,CAAC;MAC/D,IAAIH,QAAQ,EAAE;QACZ,IAAIA,QAAQ,CAACI,QAAO,GAAIL,OAAO,CAACK,QAAQ,EAAE;UAAE;UAC1CJ,QAAQ,CAACI,QAAO,IAAK,CAAC;QACxB,OAAO;UACLE,KAAK,CAAC,UAAU,CAAC;QACnB;MACF,OAAO;QACL,IAAI,CAACX,IAAI,CAACY,IAAI,CAAC;UAAE,GAAGR,OAAO;UAAEK,QAAQ,EAAE;QAAE,CAAC,CAAC;MAC7C;IACF,CAAC;IACDI,gBAAgBA,CAACT,OAAO,EAAE;MACxB,MAAMC,QAAO,GAAI,IAAI,CAACL,IAAI,CAACM,IAAI,CAACC,IAAG,IAAKA,IAAI,CAACC,EAAC,KAAMJ,OAAO,CAACI,EAAE,CAAC;MAC/D,IAAIH,QAAO,IAAKA,QAAQ,CAACI,QAAO,GAAI,CAAC,EAAE;QACrCJ,QAAQ,CAACI,QAAO,IAAK,CAAC;MACxB;IACF,CAAC;IACDK,SAASA,CAACV,OAAO,EAAE;MACjB,MAAMC,QAAO,GAAI,IAAI,CAACL,IAAI,CAACM,IAAI,CAACC,IAAG,IAAKA,IAAI,CAACC,EAAC,KAAMJ,OAAO,CAACI,EAAE,CAAC;MAC/D,IAAI,CAACH,QAAQ,EAAE;QACb;QACA,IAAID,OAAO,CAACK,QAAO,GAAI,CAAC,EAAE;UACxB,IAAI,CAACT,IAAI,CAACY,IAAI,CAAC;YAAE,GAAGR,OAAO;YAAEK,QAAQ,EAAE;UAAE,CAAC,CAAC;UAC3CE,KAAK,CAAC,iCAAiC,CAAC;QAC1C,OAAO;UACLA,KAAK,CAAC,UAAU,CAAC;QACnB;MACF,OAAO;QACLA,KAAK,CAAC,+BAA+B,CAAC;MACxC;IACF;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}