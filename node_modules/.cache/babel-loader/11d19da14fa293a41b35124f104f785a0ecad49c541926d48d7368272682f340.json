6px;\r\n  border-radius: 8px;\r\n  border: 1px solid #ccc;\r\n  margin-top: 8px;\r\n  box-sizing: border-box;\r\n  outline: none;\r\n  transition: border 0.3s ease;\r\n}\r\n\r\ninput:focus {\r\n  border-color: #fcb034;\r\n}\r\n\r\n.showPass {\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: flex-start;\r\n  margin-top: 8px;\r\n}\r\n\r\n.showPass label {\r\n  font-size: 14px;\r\n  color: #555;\r\n  margin-left: 5px;\r\n}\r\n\r\n.btn-login {\r\n  width: 100%;\r\n  padding: 12px;\r\n  background-color: #fcb034;\r\n  color: white;\r\n  font-size: 16px;\r\n  font-weight: bold;\r\n  border: none;\r\n  border-radius: 8px;\r\n  cursor: pointer;\r\n  transition: background-color 0.3s ease, transform 0.3s ease;\r\n}\r\n\r\n.btn-login:hover {\r\n  background-color: #ffa726;\r\n  transform: scale(1.05);\r\n}\r\n\r\n.register-link {\r\n  margin-top: 20px;\r\n}\r\n\r\n.register-link p {\r\n  font-size: 14px;\r\n  color: #666;\r\n}\r\n\r\n.register-link router-link {\r\n  font-weight: 600;\r\n  color: #fcb034;\r\n}\r\n\r\n.error-message {\r\n  color: red;\r\n  font-size: 14px;\r\n  margin-top: 10px;\r\n}\r\n</style>\r\n"],"mappings":";AAgCA,OAAOA,IAAG,MAAO,cAAc;AAC/B,OAAOC,QAAO,MAAO,mBAAmB;AAExC,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,EAAE;MACZC,QAAQ,EAAE,EAAE;MACZC,KAAK,EAAE,EAAE;MACTL,IAAI,EAAEA;IACR,CAAC;EACH,CAAC;EACDM,OAAO,EAAE;IACPC,KAAKA,CAAA,EAAG;MACN,MAAMC,OAAM,GAAIC,IAAI,CAACC,KAAK,CAACC,YAAY,CAACC,OAAO,CAAC,OAAO,KAAK,IAAI,CAAC;MACjE,MAAMC,KAAI,GAAIL,OAAO,CAACM,IAAI,CAACC,CAAA,IAAKA,CAAC,CAACZ,QAAO,KAAM,IAAI,CAACA,QAAO,IAAKY,CAAC,CAACX,QAAO,KAAM,IAAI,CAACA,QAAQ,CAAC;MAC7F,IAAIS,KAAK,EAAE;QACT;QACAF,YAAY,CAACK,OAAO,CAAC,aAAa,EAAEP,IAAI,CAACQ,SAAS,CAACJ,KAAK,CAAC,CAAC;QAC1DZ,QAAQ,CAACiB,IAAI,CAAC,cAAc,EAAEL,KAAK,CAAC;QACpC,IAAI,CAACM,OAAO,CAACC,IAAI,CAAC,GAAG,CAAC;MACxB,OAAO;QACL,IAAI,CAACf,KAAI,GAAI,oCAAoC;QACjD;MACF;IACF;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}