{"ast":null,"code":"import CategorySection from './CategorySection.vue';\nimport items from '@/data/items';\nimport itemsFood from '@/data/itemsFood';\nimport HeaderMenu from '@/components/HeaderMenu.vue';\nexport default {\n  data() {\n    return {\n      items: items,\n      itemsFood: itemsFood\n    };\n  },\n  components: {\n    CategorySection,\n    HeaderMenu\n  }\n};","map":{"version":3,"names":["CategorySection","items","itemsFood","HeaderMenu","data","components"],"sources":["D:\\Thứ 4\\food\\src\\components\\MenuPageComBo.vue"],"sourcesContent":["<template>\r\n    <div>\r\n      <HeaderMenu />\r\n      <!-- Phần hiển thị các mục sản phẩm -->\r\n      <div class=\"category-container\">\r\n        <div class=\"category-section\" v-for=\"item in items\" :key=\"item.id\">\r\n          <h2 class=\"category-title\">Danh mục: {{ item.categoryName }}</h2>\r\n          <div class=\"product-list\">\r\n            <CategorySection v-for=\"product in item.products\" :key=\"product.id\" :product=\"product\" />\r\n          </div>\r\n        </div>\r\n  \r\n        <div class=\"category-section\" v-for=\"item in itemsFood\" :key=\"item.id\">\r\n          <h2 class=\"category-title\">Danh mục: {{ item.categoryName }}</h2>\r\n          <div class=\"product-list\">\r\n            <CategorySection v-for=\"product in item.products\" :key=\"product.id\" :product=\"product\" />\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </template>\r\n  \r\n  <script>\r\n  import CategorySection from './CategorySection.vue';\r\n  import items from '@/data/items';\r\n  import itemsFood from '@/data/itemsFood';\r\n  import HeaderMenu from '@/components/HeaderMenu.vue';\r\n  \r\n  export default {\r\n    data() {\r\n      return {\r\n        items: items,\r\n        itemsFood: itemsFood,\r\n      };\r\n    },\r\n    components: {\r\n      CategorySection,\r\n      HeaderMenu,\r\n    },\r\n  };\r\n  </script>\r\n  \r\n  <style scoped>\r\n  /* Style cho HeaderMenu */\r