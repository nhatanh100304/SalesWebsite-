{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport items from '@/data/items';\nimport cart from '@/data/cart';\nexport default {\n  data() {\n    return {\n      product: {},\n      cart: cart\n    };\n  },\n  mounted() {\n    // Lấy id từ params\n    const id = this.$route.params.id;\n    // Tìm sản phẩm từ danh sách items\n    this.product = items.find(x => x.id == id);\n  },\n  methods: {\n    // Kiểm tra nếu sản phẩm đã có trong giỏ và nếu số lượng đã đầy\n    isOutOfStock(product) {\n      const productInCart = this.cart.find(item => item.id === product.id);\n      return productInCart && productInCart.quantity >= product.quanlity;\n    },\n    // Thêm sản phẩm vào giỏ hàng\n    addToCart(product) {\n      const productInCart = this.cart.find(item => item.id === product.id);\n      if (productInCart) {\n        if (productInCart.quantity < product.quanlity) {\n          productInCart.quantity += 1; // Tăng số lượng sản phẩm trong giỏ\n          alert(\"Sản phẩm đã được thêm vào giỏ hàng.\");\n        } else {\n          alert(\"Không đủ số lượng trong kho!\");\n        }\n      } else {\n        if (product.quanlity > 0) {\n          const newProduct = {\n            ...product,\n            quantity: 1\n          };\n          this.cart.push(newProduct);\n          alert(\"Sản phẩm đã được thêm vào giỏ hàng.\");\n        } else {\n          alert(\"Không đủ số lượng trong kho!\");\n        }\n      }\n    }\n  }\n};","map":{"version":3,"names":["items","cart","data","product","mounted","id","$route","params","find","x","methods","isOutOfStock","productInCart","item","quantity","quanlity","addToCart","alert","newProduct","push"],"sources":["D:\\Thứ 4\\food\\src\\components\\DetailCard.vue"],"sourcesContent":["<template>\r\n  <div class=\"menu\">\r\n    <h2 class=\"menu-title\">{{ product.title }}</h2>\r\n    <div class=\"menu-carousel\">\r\n      <div class=\"menu-item\">\r\n        <img :src=\"product.image\" alt=\"Product Image\">\r\n        <div class=\"menu-item-info\">\r\n          <h3>{{ product.title }}</h3>\r\n          <p>{{ product.description }}</p>\r\n          <p>{{ product.price }} VNĐ</p>\r\n        </div>\r\n      </div>\r\n      <div class=\"add-to-cart\">\r\n        <button @click=\"addToCart(product)\" :disabled=\"isOutOfStock(product)\">\r\n          {{ isOutOfStock(product) ? \"Hết hàng\" : \"Add to Cart\" }}\r\n        </button>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport items from '@/data/items';\r\nimport cart from '@/data/cart';\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      product: {},\r\n      cart: cart,\r\n    };\r\n  },\r\n  mounted() {\r\n    // Lấy id từ params\r\n    const id = this.$route.params.id;\r\n    // Tìm sản phẩm từ danh sách items\r\n    this.product = items.find(x => x.id == id);\r\n  },\r\n  methods: {\r\n    // Kiểm tra nếu sản phẩm đã có trong giỏ và nếu số lượng đã đầy\r\n    isOutOfStock(product) {\r\n      const productInCart = this.cart.find(item => item.id === product.id);\r\n      return productInCart && productInCart.quantity >= product.quanlity;\r\n    },\r\n    // Thêm sản phẩm vào giỏ hàng\r\n    addToCart(product) {\r\n      const productInCart = this.cart.find(item => item.id === product.id);\r\n\r\n      if (productInCart) {\r\n        if (productInCart.quantity < product.quanlity) {\r\n          productInCart.quantity += 1; // Tăng số lượng sản phẩm trong giỏ\r\n          alert(\"Sản phẩm đã được thêm vào giỏ hàng.\");\r\n        } else {\r\n          alert(\"Không đủ số lượng trong kho!\");\r\n        }\r\n      } else {\r\n        if (product.quanlity > 0) {\r\n          const newProduct = { ...product, quantity: 1 };\r\n          this.cart.push(newProduct);\r\n          alert(\"Sản phẩm đã được thêm vào giỏ hàng.\");\r\n        } else {\r\n          alert(\"Không đủ số lượng trong kho!\");\r\n        }\r\n      }\r\n    }\r\n  }\r\n};\r\n</script>"],"mappings":";AAsBA,OAAOA,KAAI,M