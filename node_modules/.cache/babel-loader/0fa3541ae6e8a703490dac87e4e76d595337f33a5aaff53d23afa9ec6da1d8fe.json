{"ast":null,"code":"import cart from \"@/data/cart\";\nexport default {\n  data() {\n    return {\n      cart: cart,\n      showOrderForm: false,\n      // Điều khiển hiển thị form đặt hàng\n      customerInfo: {\n        name: \"\",\n        address: \"\",\n        phone: \"\"\n      }\n    };\n  },\n  computed: {\n    tongtien() {\n      return this.cart.reduce((total, item) => total + item.quantity * item.price, 0);\n    },\n    tongsoluong() {\n      return this.cart.reduce((total, item) => total + item.quantity, 0);\n    }\n  },\n  methods: {\n    updateQuantity(item) {\n      if (item.quantity < 1) {\n        item.quantity = 1;\n      }\n    },\n    removeItem(itemId) {\n      this.cart = this.cart.filter(item => item.id !== itemId);\n    },\n    clearCart() {\n      this.cart = [];\n    },\n    openOrderForm() {\n      this.showOrderForm = true;\n    },\n    closeOrderForm() {\n      this.showOrderForm = false;\n    },\n    submitOrder() {\n      if (this.customerInfo.name && this.customerInfo.address && this.customerInfo.phone) {\n        alert(\"Đơn hàng của bạn đã được đặt thành công!\");\n        this.cart = []; // Xóa giỏ hàng sau khi đặt hàng\n        this.showOrderForm = false; // Đóng form\n        this.customerInfo = {\n          name: \"\",\n          address: \"\",\n          phone: \"\"\n        }; // Reset thông tin khách hàng\n      } else {\n        alert(\"Vui lòng điền đầy đủ thông tin!\");\n      }\n    }\n  }\n};","map":{"version":3,"names":["cart","data","showOrderForm","customerInfo","name","address","phone","computed","tongtien","reduce","total","item","quantity","price","tongsoluong","methods","updateQuantity","removeItem","itemId","filter","id","clearCart","openOrderForm","closeOrderForm","submitOrder","alert"],"sources":["D:\\Thứ 4\\food\\src\\components\\CardPage.vue"],"sourcesContent":["<template>\r\n  <div v-if=\"this.cart.length == 0\">\r\n    <p>Giỏ Hàng Bị Rỗng</p>\r\n  </div>\r\n  <div v-else class=\"modal-content\">\r\n    <table class=\"table\">\r\n      <thead>\r\n        <tr>\r\n          <th>HÌNH</th>\r\n          <th>SẢN PHẨM</th>\r\n          <th>Đơn giá</th>\r\n          <th>Số lượng</th>\r\n          <th>Tiền</th>\r\n          <th></th>\r\n        </tr>\r\n      </thead>\r\n      <tbody>\r\n        <tr v-for=\"item in cart\" :key=\"item.id\">\r\n          <td><img :src=\"item.image\" class=\"cart-image\" alt=\"Product Image\" /></td>\r\n          <td class=\"align-middle\">{{ item.title }}</td>\r\n          <td class=\"align-middle\">{{ item.price.toLocaleString() }} VNĐ</td>\r\n          <td class=\"align-middle\">\r\n            <input\r\n              type=\"number\"\r\n              v-model.number=\"item.quantity\"\r\n              min=\"1\"\r\n              @change=\"updateQuantity(item)\"\r\n            />\r\n          </td>\r\n          <td class=\"align-middle\">{{ (item.price * item.quantity).toLocaleString() }} VNĐ</td>\r\n          <td class=\"align-middle\">\r\n            <button @click=\"removeItem(item.id)\" class=\"btn btn-danger\">Xóa</button>\r\n          </td>\r\n        </tr>\r\n        <tr>\r\n          <td colspan=\"3\"></td>\r\n          <td>Số Lượng {{ tongsoluong }} </td>\r\n          <td>Tổng tiền {{ tongtien.toLocaleString() }} VNĐ</td>\r\n          <td>\r\n            <button @click=\"clearCart\" class=\"btn btn-danger\">Xóa hết</button>\r\n          </td>\r\n        </tr>\r\n      </tbody>\r\n    </table>\r\n\r\n    <!-- Nút Đặt Hàng -->\r\n    <div class=\"checkout-button\">\r\n      <button @click=\"openOrderForm\" class=\"btn btn-success\">Đặt Hàng</button>\r\n    </div>\r\n\r\n    <!-- Khung Nhập Thông Tin Người Dùng -->\r\n    <div v-if=\"showOrderForm\" class=\"order-form\">\r\n      <h2>Thông Tin Đặt Hàng</h2>\r\n      <div class=\"form-group\">\r\n        <label for=\"name\">Họ và Tên</label>\r\n        <input type=\"text\" v-model=\"customerInfo.name\" id=\"name\" placeholder=\"Nhập họ và tên của bạn\" />\r\n      </div>\r\n      <div class=\"form-group\">\r\n        <label for=\"address\">Địa chỉ</label>\r\n        <input type=\"text\" v-model=\"customerInfo.address\" id=\"address\" placeholder=\"Nhập địa chỉ giao hàng\" />\r\n      </div>\r\n      <div class=\"form-group\">\r\n        <label for=\"phone\">Số điện thoại</label>\r\n        <input type=\"text\" v-model=\"customerInfo.phone\" id=\"phone\" placeholder=\"Nhập số điện thoại của bạn\" />\r\n      </div>\r\n      <button @click=\"submitOrder\" class=\"btn btn-primary\">Xác Nhận Đặt Hàng</button>\r\n      <button @click=\"closeOrderForm\" class=\"btn btn-secondary\">Hủy</button>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport cart from \"@/data/cart\";\r\nexport default {\r\n  data() {\r\n    return {\r\n      cart: cart,\r\n      showOrderForm: false, // Điều khiển hiển thị form đặt hàng\r\n      customerInfo: {\r\n        name: \"\",\r\n        address: \"\",\r\n        phone: \"\",\r\n      },\r\n    };\r\n  },\r\n  computed: {\r\n    tongtien() {\r\n      return this.cart.reduce((total, item) => total + item.quantity * item.price, 0);\r\n    },\r\n    tongsoluong() {\r\n      return this.cart.reduce((total, item) => total + item.quantity, 0);\r\n    },\r\n  },\r\n  methods: {\r\n    updateQuantity(item) {\r\n      if (item.quantity < 1) {\r\n        item.quantity = 1;\r\n      }\r\n    },\r\n    removeItem(itemId) {\r\n      this.cart = this.cart.filter((item) => item.id !== itemId);\r\n    },\r\n    clearCart() {\r\n      this.cart = [];\r\n    },\r\n    openOrderForm() {\r\n      this.showOrderForm = true;\r\n    },\r\n    closeOrderForm() {\r\n      this.showOrderForm = false;\r\n    },\r\n    submitOrder() {\r\n      if (this.customerInfo.name && this.customerInfo.address && this.customerInfo.phone) {\r\n        alert(\"Đơn hàng của bạn đã được đặt thành công!\");\r\n        this.cart = []; // Xóa giỏ hàng sau khi đặt hàng\r\n        this.showOrderForm = false; // Đóng form\r\n        this.customerInfo = { name: \"\", address: \"\", phone: \"\" }; // Reset thông tin khách hàng\r\n      } else {\r\n        alert(\"Vui lòng điền đầy đủ thông tin!\");\r\n      }\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\np {\r\n  text-align: center;\r\n  font-size: 50px;\r\n}\r\n\r\n.table {\r\n  width: 100%;\r\n  border-collapse: collapse;\r\n}\r\n\r\n.table th,\r\n.table td {\r\n  text-align: center;\r\n  padding: 10px;\r\n  border: 1px solid #ddd;\r\n}\r\n\r\n.cart-image {\r\n  height: 100px;\r\n  width: 100px;\r\n  object-fit: cover;\r\n}\r\n\r\n.btn {\r\n  padding: 5px 10px;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n}\r\n\r\n.btn-danger {\r\n  background-color: #d9534f;\r\n  color: white;\r\n}\r\n\r\n.btn-danger:hover {\r\n  background-color: #c9302c;\r\n}\r\n\r\n.btn-success {\r\n  background-color: #5cb85c;\r\n  color: white;\r\n}\r\n\r\n.btn-success:hover {\r\n  background-color: #4cae4c;\r\n}\r\n\r\n.order-form {\r\n  margin-top: 20px;\r\n  padding: 20px;\r\n  border: 1px solid #ddd;\r\n  border-radius: 5px;\r\n  background-color: #f9f9f9;\r\n}\r\n\r\n.order-form h2 {\r\n  text-align: center;\r\n  color: #333;\r\n}\r\n\r\n.form-group {\r\n  margin-bottom: 15px;\r\n}\r\n\r\n.form-group label {\r\n  font-weight: bold;\r\n}\r\n\r\n.form-group input {\r\n  width: 100%;\r\n  padding: 8px;\r\n  border: 1px solid #ccc;\r\n  border-radius: 4px;\r\n}\r\n\r\n.checkout-button {\r\n  text-align: center;\r\n  margin-top: 20px;\r\n}\r\n</style>\r\n"],"mappings":"AAwEA,OAAOA,IAAG,MAAO,aAAa;AAC9B,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLD,IAAI,EAAEA,IAAI;MACVE,aAAa,EAAE,KAAK;MAAE;MACtBC,YAAY,EAAE;QACZC,IAAI,EAAE,EAAE;QACRC,OAAO,EAAE,EAAE;QACXC,KAAK,EAAE;MACT;IACF,CAAC;EACH,CAAC;EACDC,QAAQ,EAAE;IACRC,QAAQA,CAAA,EAAG;MACT,OAAO,IAAI,CAACR,IAAI,CAACS,MAAM,CAAC,CAACC,KAAK,EAAEC,IAAI,KAAKD,KAAI,GAAIC,IAAI,CAACC,QAAO,GAAID,IAAI,CAACE,KAAK,EAAE,CAAC,CAAC;IACjF,CAAC;IACDC,WAAWA,CAAA,EAAG;MACZ,OAAO,IAAI,CAACd,IAAI,CAACS,MAAM,CAAC,CAACC,KAAK,EAAEC,IAAI,KAAKD,KAAI,GAAIC,I