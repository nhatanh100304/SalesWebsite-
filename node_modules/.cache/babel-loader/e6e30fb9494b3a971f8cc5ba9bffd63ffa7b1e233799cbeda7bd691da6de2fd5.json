InCart.quantity < product.quantity) {\r\n          productInCart.quantity += 1;\r\n          alert(\"Sản phẩm đã được thêm vào giỏ hàng.\");\r\n        } else {\r\n          alert(\"Không đủ số lượng trong kho!\");\r\n        }\r\n      } else {\r\n        if (product.quantity > 0) {\r\n          const newProduct = { ...product, quantity: 1 };\r\n          this.cart.push(newProduct);\r\n          alert(\"Sản phẩm đã được thêm vào giỏ hàng.\");\r\n        } else {\r\n          alert(\"Không đủ số lượng trong kho!\");\r\n        }\r\n      }\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.menu {\r\n  text-align: center;\r\n  padding: 30px;\r\n  background-color: #f9f9f9;\r\n}\r\n\r\n.menu-title {\r\n  font-size: 36px;\r\n  font-weight: bold;\r\n  margin-bottom: 20px;\r\n  color: #333;\r\n  text-transform: uppercase;\r\n}\r\n\r\n.menu-item-detail {\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n  gap: 40px;\r\n  flex-wrap: wrap;\r\n  margin-top: 20px;\r\n}\r\n\r\n.menu-item-image {\r\n  flex: 1;\r\n  max-width: 500px;\r\n}\r\n\r\n.menu-item-image img {\r\n  width: 100%;\r\n  height: auto;\r\n  border-radius: 10px;\r\n  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);\r\n}\r\n\r\n.menu-item-info {\r\n  flex: 1;\r\n  max-width: 500px;\r\n  text-align: left;\r\n  padding: 20px;\r\n  background-color: #fff;\r\n  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);\r\n  border-radius: 10px;\r\n}\r\n\r\n.menu-item-info h3 {\r\n  font-size: 26px;\r\n  margin-bottom: 15px;\r\n  font-weight: bold;\r\n}\r\n\r\n.menu-item-info p {\r\n  margin: 10px 0;\r\n  color: #666;\r\n}\r\n\r\n.price {\r\n  color: #fcb034;\r\n  font-size: 20px;\r\n  font-weight: bold;\r\n  margin-top: 15px;\r\n}\r\n\r\n.add-to-cart {\r\n  margin-top: 20px;\r\n  text-align: center;\r\n}\r\n\r\n.add-to-cart button {\r\n  background-color: #fcb034;\r\n  color: white;\r\n  font-size: 16px;\r\n  padding: 10px 20px;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n  