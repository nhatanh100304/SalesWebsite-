.quantity<=prod.quanlity){\r\n      item.quantity++\r\n      prod.quanlity--\r\n     }\r\n    },\r\n    decreaseSelectedQuantity(item) {\r\n      const prod=items.find(i=>i.id==item.id)\r\n     if(item.quantity>1){\r\n      item.quantity--\r\n      prod.quanlity++\r\n     }else\r\n     this.deleteproduct(item)\r\n      prod.quanlity++\r\n     }\r\n    },\r\n    addToCart(product) {\r\n      const cartItem = this.cart.find(item => item.id === product.id);\r\n      if (cartItem) {\r\n        // Cập nhật số lượng nếu sản phẩm đã có trong giỏ\r\n        cartItem.quantity += product.selectedQuantity;\r\n        alert(\"Sản phẩm được cập nhật trong giỏ hàng\");\r\n      } else {\r\n        // Thêm sản phẩm vào giỏ hàng với số lượng đã chọn\r\n        this.cart.push({ ...product, quantity: product.selectedQuantity });\r\n        alert(\"Sản phẩm được thêm vào giỏ hàng\");\r\n      }\r\n      product.quantity--\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n/* Style cho thực đơn */\r\nh1 {\r\n  text-align: center;\r\n  margin-top: 30px;\r\n  font-size: 36px;\r\n  color: #333;\r\n}\r\n\r\n/* Danh sách sản phẩm */\r\n.product-list {\r\n  display: grid;\r\n  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));\r\n  gap: 20px;\r\n  padding: 20px;\r\n}\r\n\r\n/* Thẻ sản phẩm */\r\n.product-card {\r\n  background-color: #fff;\r\n  border: 1px solid #ddd;\r\n  border-radius: 8px;\r\n  padding: 15px;\r\n  text-align: center;\r\n  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);\r\n  transition: transform 0.3s ease, box-shadow 0.3s ease;\r\n  cursor: pointer;\r\n}\r\n\r\n.product-card:hover {\r\n  transform: scale(1.05);\r\n  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);\r\n}\r\n\r\n.product-card img {\r\n  width: 100%;\r\n  height: 180px;\r\n  object-fit: cover;\r\n  border-radius: 8px;\r\n  margin-bottom: 10px;\r\n}\r\n\r\n.product-card h3 {\r\n  font-size: 20px;\r\n  margin: 10px 0;\r\n  color: #333;\r\n}\r\n\r\n.product-card p {\r\n  font-size: 14px;\r\n  color: #555;\r\n}\r\n\r\n.product-card .product-price {\r\n  font-size: 16px;\r\n  color: #fcb034;\r\n  margin: 10px 0;\r\n}\r\n\r\n/* Nút thêm vào giỏ */\r\n.product-card button {\r\n  background-color: #fcb034;\r\n  color: white;\r\n  padding: 10px 20px;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n  font-size: 16px;\r\n}\r\n\r\n.product-card button:hover {\r\n  background-color: #e69526;\r\n}\r\n\r\n/* Điều khiển số lượng */\r\n.quantity-controls {\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  gap: 10px;\r\n  margin: 10px 0;\r\n}\r\n\r\n.quantity-controls button {\r\n  padding: 5px 10px;\r\n  background-color: #fcb034;\r\n  color: white;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n}\r\n\r\n.quantity-controls button:hover {\r\n  background-color: #e69526;\r\n}\r\n\r\n.quantity-controls span {\r\n  font-size: 16px;\r\n}\r\n</style>\r\n"],"mappings":";;EAGSA,KAAK,EAAC;AAAc;mBAH7B;;EAYaA,KAAK,EAAC;AAAe;;EAGrBA,KAAK,EAAC;AAAmB;mBAftC;mBAAA;mBAAA;;uBACEC,mBAAA,CAuBM,c,0BAtBJC,mBAAA,CAAiB,YAAb,UAAQ,sBACZA,mBAAA,CAoBM,OApBNC,UAoBM,I,kBAnBJF,mBAAA,CAkBMG,SAAA,QAtBZC,WAAA,CAKuBC,IAAA,CAAAC,SAAS,EAAjBC,IAAI;yBADbP,mBAAA,CAkBM;MAhBHQ,GAAG,EAAED,IAAI,CAACE,EAAE;MACbV,KAAK,EAAC;QAENE,mBAAA,CAA2C;MAArCS,GAAG,EAAEH,IAAI,CAACI,KAAK;MAAGC,GAAG,EAAEL,IAAI,CAACM;4BAT1CC,UAAA,GAUQb,mBAAA,CAAyB,YAAAc,gBAAA,CAAlBR,IAAI,CAACM,KAAK,kBACjBZ,mBAAA,CAA6B,WAAAc,gBAAA,CAAvBR,IAAI,CAACS,WAAW,kBACtBf,mBAAA,CAAsE,OAAtEgB,UAAsE,EAAAF,gBAAA,CAAxCR,IAAI,CAACW,KAAK,CAACC,cAAc,MAAK,MAAI,iBAEhEC,mBAAA,oDAAuD,EACvDnB,mBAAA,CAIM,OAJNoB,UAIM,GAHJpB,mBAAA,CAA0D;MAAjDqB,OAAK,EAAAC,MAAA,IAAElB,IAAA,CAAAmB,wBAAwB,CAACjB,IAAI;OAAG,GAAC,iBAhB3DkB,UAAA,GAiBUxB,mBAAA,CAAwC,cAAAc,gBAAA,CAA/BR,IAAI,CAACmB,gBAAgB,kBAC9BzB,mBAAA,CAA0D;MAAjDqB,OAAK,EAAAC,MAAA,IAAElB,IAAA,CAAAsB,wBAAwB,CAACpB,IAAI;OAAG,GAAC,iBAlB3DqB,UAAA,E,GAqBQ3B,mBAAA,CAAqD;MAA5CqB,OAAK,EAAAC,MAAA,IAAElB,IAAA,CAAAwB,SAAS,CAACtB,IAAI;OAAG,aAAW,iBArBpDuB,UAAA,E","ignoreList":[]}