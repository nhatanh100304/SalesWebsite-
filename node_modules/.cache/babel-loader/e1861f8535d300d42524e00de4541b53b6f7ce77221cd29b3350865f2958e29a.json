{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport itemsWater from '@/data/itemsWater'; // Đảm bảo rằng đây là mảng hợp lệ\nimport cart from '@/data/cart';\nexport default {\n  data() {\n    return {\n      // Đảm bảo itemsWater là một mảng hợp lệ và nếu không, set mặc định là mảng rỗng\n      itemsWater: itemsWater.map(item => ({\n        ...item,\n        selectedQuantity: 1\n      })),\n      cart: cart\n    };\n  },\n  methods: {\n    // Kiểm tra số lượng sản phẩm có đủ không\n    isOutOfStock(item) {\n      return item.selectedQuantity > item.quanlity || item.quanlity <= 0;\n    },\n    addToCart(product) {\n      const cartItem = this.cart.find(item => item.id === product.id);\n      if (cartItem && product.quanlity > 0) {\n        cartItem.quantity += 1;\n        alert(\"Sản phẩm được cập nhật trong giỏ hàng\");\n      } else {\n        if (product.quanlity > 0) {\n          const newproduct = {\n            ...product,\n            quantity: 1\n          };\n          this.cart.push(newproduct);\n        }\n        alert(\"Sản phẩm được thêm vào giỏ hàng\");\n      }\n      product.selectedQuantity = 1; // Đặt lại số lượng sau khi thêm vào giỏ hàng\n      product.quanlity--; // Giảm số lượng trong kho khi thêm vào giỏ\n    }\n  }\n};","map":{"version":3,"names":["itemsWater","cart","data","map","item","selectedQuantity","methods","isOutOfStock","quanlity","addToCart","product","cartItem","find","id","quantity","alert","newproduct","push"],"sources":["D:\\Thứ 4\\food\\src\\components\\MenuWater.vue"],"sourcesContent":["<template>\r\n    <div>\r\n      <div class=\"product-list\">\r\n        <div \r\n          v-for=\"item in itemsWater\" \r\n          :key=\"item.id\" \r\n          class=\"product-card\"\r\n        >\r\n          <img :src=\"item.image\" :alt=\"item.title\" />\r\n          <h3>{{ item.title }}</h3>\r\n          <p>{{ item.description }}</p>\r\n          <div class=\"product-price\">{{ item.price.toLocaleString() }} VNĐ</div>\r\n  \r\n          <!-- Nút thêm vào giỏ, thay đổi nếu hết hàng -->\r\n          <button \r\n            @click=\"addToCart(item)\" \r\n            :disabled=\"isOutOfStock(item)\" \r\n            class=\"add-to-cart-button\"\r\n          >\r\n            {{ isOutOfStock(item) ? 'Hết hàng' : 'Thêm vào giỏ' }}\r\n          </button>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </template>\r\n  \r\n  <script>\r\n  import itemsWater from '@/data/itemsWater'; // Đảm bảo rằng đây là mảng hợp lệ\r\n  import cart from '@/data/cart';\r\n  \r\n  export default {\r\n    data() {\r\n      return {\r\n        // Đảm bảo itemsWater là một mảng hợp lệ và nếu không, set mặc định là mảng rỗng\r\n        itemsWater: itemsWater.map(item => ({ ...item, selectedQuantity: 1 })),\r\n        cart: cart,\r\n      };\r\n    },\r\n    methods: {\r\n      // Kiểm tra số lượng sản phẩm có đủ không\r\n      isOutOfStock(item) {\r\n        return item.selectedQuantity > item.quanlity || item.quanlity <= 0;\r\n      },\r\n  \r\n      addToCart(product) {\r\n        const cartItem = this.cart.find(item => item.id === product.id);\r\n        if (cartItem && product.quanlity > 0) {\r\n          cartItem.quantity += 1;\r\n          alert(\"Sản phẩm được cập nhật trong giỏ hàng\");\r\n        } else {\r\n          if (product.quanlity > 0) {\r\n            const newproduct = { ...product, quantity: 1 };\r\n            this.cart.push(newproduct);\r\n          }\r\n          alert(\"Sản phẩm được thêm vào giỏ hàng\");\r\n        }\r\n        product.selectedQuantity = 1; // Đặt lại số lượng sau khi thêm vào giỏ hàng\r\n        product.quanlity--; // Giảm số lượng trong kho khi thêm vào giỏ\r\n      }\r\n    }\r\n  };\r\n  </script>\r\n  \r\n  <style scoped>\r\n  /* Style cho thực đơn */\r\n  h1 {\r\n    text-align: center;\r\n    margin-top: 30px;\r\n    font-size: 36px;\r\n    color: #333;\r\n  }\r\n  \r\n  /* Danh sách sản phẩm */\r\n  .product-list {\r\n    display: grid;\r\n    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));\r\n    gap: 20px;\r\n    padding: 20px;\r\n  }\r\n  \r\n  /* Thẻ sản phẩm */\r\n  .product-card {\r\n    background-color: #fff;\r\n    border: 1px solid #ddd;\r\n    border-radius: 8px;\r\n    padding: 15px;\r\n    text-align: center;\r\n    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);\r\n    transition: transform 0.3s ease, box-shadow 0.3s ease;\r\n    cursor: pointer;\r\n  }\r\n  \r\n  .product-card:hover {\r\n    transform: scale(1.05);\r\n    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);\r\n  }\r\n  \r\n  .product-card img {\r\n    width: 100%;\r\n    height: 180px;\r\n    object-fit: cover;\r\n    border-radius: 8px;\r\n    margin-bottom: 10px;\r\n  }\r\n  \r\n  .product-card h3 {\r\n    font-size: 20px;\r\n    margin: 10px 0;\r\n    color: #333;\r\n  }\r\n  \r\n  .product-card p {\r\n    font-size: 14px;\r\n    color: #555;\r\n  }\r\n  \r\n  .product-card .product-price {\r\n    font-size: 16px;\r\n    color: #fcb034;\r\n    margin: 10px 0;\r\n  }\r\n  \r\n  /* Nút thêm vào giỏ */\r\n  .product-card button {\r\n    background-color: #fcb034;\r\n    color: white;\r\n    padding: 10px 20px;\r\n    border: none;\r\n    border-radius: 5px;\r\n    cursor: pointer;\r\n    font-size: 16px;\r\n  }\r\n  \r\n  .product-card button:hover {\r\n    background-color: #e69526;\r\n  }\r\n  </style>\r\n  "],"mappings":";AA2BE,OAAOA,UAAS,MAAO,mBAAmB,EAAE;AAC5C,OAAOC,IAAG,MAAO,aAAa;AAE9B,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACL;MACAF,UAAU,EAAEA,UAAU,CAACG,GAAG,CAACC,IAAG,KAAM;QAAE,GAAGA,IAAI;QAAEC,gBAAgB,EAAE;MAAE,CAAC,CAAC,CAAC;MACtEJ,IAAI,EAAEA;IACR,CAAC;EACH,CAAC;EACDK,OAAO,EAAE;IACP;IACAC,YAAYA,CAACH,IAAI,EAAE;MACjB,OAAOA,IAAI,CAACC,gBAAe,GAAID,IAAI,CAACI,QAAO,IAAKJ,IAAI,CAACI,QAAO,IAAK,CAAC;IACpE,CAAC;IAEDC,SAASA,CAACC,OAAO,EAAE;MACjB,MAAMC,QAAO,GAAI,IAAI,CAACV,IAAI,CAACW,IAAI,CAACR,IAAG,IAAKA,IAAI,CAACS,EAAC,KAAMH,OAAO,CAACG,EAAE,CAAC;MAC/D,IAAIF,QAAO,IAAKD,OAAO,CAACF,QAAO,GAAI,CAAC,EAAE;QACpCG,QAAQ,CAACG,QAAO,IAAK,CAAC;QAC