{"ast":null,"code":"export default {\n  name: \"CategorySection\",\n  props: ['product'],\n  data() {\n    return {\n      quantity: 1,\n      showPopup: false // Trạng thái hiển thị popup\n    };\n  },\n  methods: {\n    increaseQuantity() {\n      this.quantity += 1;\n    },\n    decreaseQuantity() {\n      if (this.quantity > 1) {\n        this.quantity -= 1;\n      }\n    },\n    openPopup() {\n      this.showPopup = true; // Hiển thị popup\n    },\n    closePopup() {\n      this.showPopup = false; // Đóng popup\n    },\n    addToCart() {\n      this.$emit(\"add-to-cart\", {\n        ...this.product,\n        quantity: this.quantity\n      });\n      this.close();\n    }\n  }\n};","map":{"version":3,"names":["name","props","data","quantity","showPopup","methods","increaseQuantity","decreaseQuantity","openPopup","closePopup","addToCart","$emit","product","close"],"sources":["D:\\Thứ 4\\food\\src\\components\\CategorySection.vue"],"sourcesContent":["<template>\r\n  <div class=\"category-section\">\r\n    <!-- Thẻ sản phẩm -->\r\n    <div class=\"category-card\">\r\n      <!-- Nhấn vào ảnh để mở popup -->\r\n      <img :src=\"product.image\" alt=\"Product image\" class=\"product-image\" @click=\"openPopup\" />\r\n      <div class=\"product-info\">\r\n        <h3>{{ product.title }}</h3>\r\n        \r\n        <!-- <div class=\"quantity-control\">\r\n          <button @click=\"decreaseQuantity\">-</button>\r\n          <span>{{ quantity }}</span>\r\n          <button @click=\"increaseQuantity\">+</button>\r\n        </div> -->\r\n      </div>\r\n    </div>\r\n\r\n    <!-- Popup chi tiết sản phẩm -->\r\n    <div v-if=\"showPopup\" class=\"popup-overlay\" @click.self=\"closePopup\">\r\n      <div class=\"popup-content\">\r\n        <button class=\"close-btn\" @click=\"closePopup\">×</button>\r\n        <h3>{{ product.title }}</h3>\r\n        <img :src=\"product.image\" alt=\"Product image\" class=\"popup-image\" />\r\n        <p>{{ product.description }}</p>\r\n        <p>Giá: {{ product.price }}</p>\r\n        <button @click=\"addToCart\" class=\"add-to-cart-btn\">Thêm vào Giỏ hàng</button>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: \"CategorySection\",\r\n  props: ['product'],\r\n  data() {\r\n    return {\r\n      quantity: 1,\r\n      showPopup: false, // Trạng thái hiển thị popup\r\n    };\r\n  },\r\n  methods: {\r\n    increaseQuantity() {\r\n      this.quantity += 1;\r\n    },\r\n    decreaseQuantity() {\r\n      if (this.quantity > 1) {\r\n        this.quantity -= 1;\r\n      }\r\n    },\r\n    openPopup() {\r\n      this.showPopup = true; // Hiển thị popup\r\n    },\r\n    closePopup() {\r\n      this.showPopup = false; // Đóng popup\r\n    },\r\n    addToCart() {\r\n      this.$emit(\"add-to-cart\", { ...this.product, quantity: this.quantity });\r\n      this.close();\r\n    },\r\n  }\r\n};\r\n</script>\r\n\r\n<style>\r\n.category-section {\r\n  display: flex;\r\n  justify-content: center;\r\n  padding: 20px;\r\n  background-color: #f9f9f9;\r\n}\r\n\r\n.category-card {\r\n  display: flex;\r\n  flex-direction: column;\r\n  align-items: center;\r\n  width: 300px;\r\n  padding: 20px;\r\n  border-radius: 10px;\r\n  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);\r\n  background-color: #fff;\r\n  transition: transform 0.3s;\r\n}\r\n\r\n.category-card:hover {\r\n  transform: scale(1.05);\r\n}\r\n\r\n.product-image {\r\n  width: 100%;\r\n  height: auto;\r\n  border-radius: 8px;\r\n  margin-bottom: 15px;\r\n  cursor: pointer;\r\n}\r\n\r\n.product-info {\r\n  text-align: center;\r\n}\r\n\r\n.product-info h3 {\r\n  font-size: 20px;\r\n  margin: 10px 0;\r\n}\r\n\r\n.product-info p {\r\n  color: #666;\r\n  font-size: 16px;\r\n  margin: 10px 0;\r\n}\r\n\r\n.quantity-control {\r\n  display: flex;\r\n  align-items: center;\r\n  margin-top: 10px;\r\n}\r\n\r\n.quantity-control button {\r\n  background-color: #007bff;\r\n  color: white;\r\n  border: none;\r\n  padding: 5px 10px;\r\n  font-size: 18px;\r\n  cursor: pointer;\r\n  border-radius: 5px;\r\n  transition: background-color 0.3s;\r\n}\r\n\r\n.quantity-control button:hover {\r\n  background-color: #0056b3;\r\n}\r\n\r\n.quantity-control span {\r\n  margin: 0 10px;\r\n  font-size: 18px;\r\n  color: #333;\r\n}\r\n\r\n/* Phong cách cho popup */\r\n.popup-overlay {\r\n  position: fixed;\r\n  top: 0;\r\n  left: 0;\r\n  width: 100%;\r\n  height: 100%;\r\n  background-color: rgba(0, 0, 0, 0.5);\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n  z-index: 1000;\r\n}\r\n\r\n.popup-content {\r\n  background: #fff;\r\n  padding: 20px;\r\n  border-radius: 8px;\r\n  width: 300px;\r\n  text-align: center;\r\n  position: relative;\r\n}\r\n\r\n.close-btn {\r\n  position: absolute;\r\n  top: 10px;\r\n  right: 10px;\r\n  background: none;\r\n  border: none;\r\n  font-size: 24px;\r\n  cursor: pointer;\r\n}\r\n\r\n.popup-image {\r\n  width: 100%;\r\n  border-radius: 8px;\r\n  margin-bottom: 10px;\r\n}\r\n</style>\r\n"],"mappings":"AAgCA,eAAe;EACbA,IAAI,EAAE,iBAAiB;EACvBC,KAAK,EAAE,CAAC,SAAS,CAAC;EAClBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,CAAC;MACXC,SAAS,EAAE,KAAK,CAAE;IACpB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,gBAAgBA,CAAA,EAAG;MACjB,IAAI,CAACH,QAAO,IAAK,CAAC;IACpB,CAAC;IACDI,gBAAgBA,CAAA,EAAG;MACjB,IAAI,IAAI,CAACJ,QAAO,GAAI,CAAC,EAAE;QACrB,IAAI,CAACA,QAAO,IAAK,CAAC;MACpB;IACF,CAAC;IACDK,SAASA,CAAA,EAAG;MACV,IAAI,CAACJ,SAAQ,GAAI,IAAI,EAAE;IACzB,CAAC;IACDK,UAAUA,CAAA,EAAG;MACX,IAAI,CAACL,SAAQ,GAAI,KAAK,EAAE;IAC1B,CAAC;IACDM,SAASA,CAAA,EAAG;MACV,IAAI,CAACC,KAAK,CAAC,aAAa,EAAE;QAAE,GAAG,IAAI,CAACC,OAAO;QAAET,QAAQ,EAAE,IAAI,CAACA;MAAS,CAAC,CAAC;MACvE,IAAI,CAACU,KAAK,CAAC,CAAC;IACd;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}