{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport items from '@/data/items';\nimport cart from '@/data/cart';\nexport default {\n  data() {\n    return {\n      product: {},\n      cart: cart\n    };\n  },\n  mounted() {\n    const id = this.$route.params.id;\n    this.product = items.find(x => x.id == id);\n  },\n  methods: {\n    // Kiểm tra nếu sản phẩm đã có trong giỏ và nếu số lượng đã đầy\n    isOutOfStock(product) {\n      const productInCart = this.cart.find(item => item.id === product.id);\n      return productInCart && productInCart.quantity >= product.quanlity;\n    },\n    // Thêm sản phẩm vào giỏ hàng\n    addToCart(product) {\n      const productInCart = this.cart.find(item => item.id === product.id);\n      if (productInCart) {\n        if (productInCart.quantity < product.quanlity) {\n          productInCart.quantity += 1; // Tăng số lượng sản phẩm trong giỏ\n          alert(\"Sản phẩm đã được thêm vào giỏ hàng.\");\n        } else {\n          alert(\"Không đủ số lượng trong kho!\");\n        }\n      } else {\n        if (product.quanlity > 0) {\n          const newProduct = {\n            ...product,\n            quantity: 1\n          };\n          this.cart.push(newProduct);\n          alert(\"Sản phẩm đã được thêm vào giỏ hàng.\");\n        } else {\n          alert(\"Không đủ số lượng trong kho!\");\n        }\n      }\n    }\n  }\n};","map":{"version":3,"names":["items","cart","data","product","mounted","id","$route","params","find","x","methods","isOutOfStock","productInCart","item","quantity","quanlity","addToCart","alert","newProduct","push"],"sources":["D:\\Thứ 4\\food\\src\\components\\DetailCard2.vue"],"sourcesContent":["<template>\r\n    <div class=\"menu\">\r\n      <h2 class=\"menu-title\">Taste Our Foods & Enjoy</h2>\r\n      <div class=\"menu-carousel\">\r\n        <div class=\"menu-item\">\r\n          <img :src=\"product.image\" alt=\"image\">\r\n          <div class=\"menu-item-info\">\r\n            <h3>{{ product.title }}</h3>\r\n            <p>{{ product.description }}</p>\r\n            <p>{{ product.price }} VNĐ</p>\r\n          </div>\r\n        </div>\r\n        <div class=\"add-to-cart\">\r\n          <button @click=\"addToCart(product)\" :disabled=\"isOutOfStock(product)\">\r\n            {{ isOutOfStock(product) ? \"Hết hàng\" : \"Add to Cart\" }}\r\n          </button>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </template>\r\n  \r\n  <script>\r\nimport items from '@/data/items';\r\nimport cart from '@/data/cart';\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      product: {},\r\n      cart: cart,\r\n    };\r\n  },\r\n  mounted() {\r\n    const id = this.$route.params.id;\r\n    this.product = items.find(x => x.id == id);\r\n  },\r\n  methods: {\r\n    // Kiểm tra nếu sản phẩm đã có trong giỏ và nếu số lượng đã đầy\r\n    isOutOfStock(product) {\r\n      const productInCart = this.cart.find(item => item.id === product.id);\r\n      return productInCart && productInCart.quantity >= product.quanlity;\r\n    },\r\n    // Thêm sản phẩm vào giỏ hàng\r\n    addToCart(product) {\r\n      const productInCart = this.cart.find(item => item.id === product.id);\r\n\r\n      if (productInCart) {\r\n        if (productInCart.quantity < product.quanlity) {\r\n          productInCart.quantity += 1; // Tăng số lượng sản phẩm trong giỏ\r\n          alert(\"Sản phẩm đã được thêm vào giỏ hàng.\");\r\n        } else {\r\n          alert(\"Không đủ số lượng trong kho!\");\r\n        }\r\n      } else {\r\n        if (product.quanlity > 0) {\r\n          const newProduct = { ...product, quantity: 1 };\r\n          this.cart.push(newProduct);\r\n          alert(\"Sản phẩm đã được thêm vào giỏ hàng.\");\r\n        } else {\r\n          alert(\"Không đủ số lượng trong kho!\");\r\n        }\r\n      }\r\n    }\r\n  }\r\n};\r\n</script>\r\n  \r\n  <style scoped>\r\n  /* Style cho chi tiết sản phẩm */\r\n  .product-detail {\r\n    display: flex;\r\n    justify-content: center;\r\n    padding: 20px;\r\n  }\r\n  \r\n  .product-detail-container {\r\n    display: flex;\r\n    align-items: flex-start;\r\n    gap: 20px;\r\n    max-width: 1200px;\r\n    width: 100%;\r\n  }\r\n  \r\n  .product-image img {\r\n    width: 300px;\r\n    height: 300px;\r\n    object-fit: cover;\r\n    border-radius: 8px;\r\n  }\r\n  \r\n  .product-info {\r\n    max-width: 600px;\r\n  }\r\n  \r\n  .product-info h2 {\r\n    font-size: 32px;\r\n    color: #333;\r\n  }\r\n  \r\n  .product-info p {\r\n    font-size: 16px;\r\n    color: #555;\r\n    margin: 20px 0;\r\n  }\r\n  \r\n  .product-info .product-price {\r\n    font-size: 24px;\r\n    color: #fcb034;\r\n    margin: 20px 0;\r\n  }\r\n  \r\n  .product-info .stock-status {\r\n    font-size: 18px;\r\n    margin: 10px 0;\r\n    font-weight: bold;\r\n  }\r\n  \r\n  .product-info button {\r\n    background-color: #fcb034;\r\n    color: white;\r\n    padding: 12px 20px;\r\n    border: none;\r\n    border-radius: 5px;\r\n    cursor: pointer;\r\n    font-size: 16px;\r\n  }\r\n  \r\n  .product-info button:hover {\r\n    background-color: #e69526;\r\n  }\r\n  \r\n  .product-info button:disabled {\r\n    background-color: #ddd;\r\n    cursor: not-allowed;\r\n  }\r\n  </style>\r\n  "],"mappings":";AAsBA,OAAOA,KAAI,MAAO,cAAc;AAChC,OAAOC,IAAG,MAAO,aAAa;AAE9B,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,OAAO,EAAE,CAAC,CAAC;MACXF,IAAI,EAAEA;IACR,CAAC;EACH,CAAC;EACDG,OAAOA,CAAA,EAAG;IACR,MAAMC,EAAC,GAAI,IAAI,CAACC,MAAM,CAACC,MAAM,CAACF,EAAE;IAChC,IAAI,CAACF,OAAM,GAAIH,KAAK,CAACQ,IAAI,CAACC,CAAA,IAAKA,CAAC,CAACJ,EAAC,IAAKA,EAAE,CAAC;EAC5C,CAAC;EACDK,OAAO,EAAE;IACP;IACAC,YAAYA,CAACR,OAAO,EAAE;MACpB,MAAMS,aAAY,GAAI,IAAI,CAACX,IAAI,CAACO,IAAI,CAACK,IAAG,IAAKA,IAAI,CAACR,EAAC,KAAMF,OAAO,CAACE,EAAE,CAAC;MACpE,OAAOO,aAAY,IAAKA,aAAa,CAACE,QAAO,IAAKX,OAAO,CAACY,QAAQ;IACpE,CAAC;IACD;IACAC,SAASA,CAACb,OAAO,EAAE;MACjB,MAAMS,aAAY,GAAI,IAAI,CAACX,IAAI,CAACO,IAAI,CAACK,IAAG,IAAKA,IAAI,CAACR,EAAC,KAAMF,OAAO,CAACE,EAAE,CAAC;MAEpE,IAAIO,aA