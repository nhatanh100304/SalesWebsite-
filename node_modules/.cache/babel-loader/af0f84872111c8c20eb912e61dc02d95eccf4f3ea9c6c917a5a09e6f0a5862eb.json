             let changeData= document.getElementById(\"btn-add\");\r\n                    changeData.textContent=\"Hết hàng\";\r\n                    changeData.disables= false;\r\n\r\n                }\r\n\r\n                alert(\"Sản phẩm đã thêm số lượng\")\r\n            }\r\n            else{\r\n                const newCart={...product,quantity:1}\r\n                this.cart.push(newCart);\r\n                alert(\"Sản phẩm được thêm thành công\");\r\n                this.product.quantity -= 1;\r\n\r\n            if (this.product.quantity === 0) {\r\n           let addButton = document.getElementById(\"btn-add\");\r\n               addButton.textContent = \"Hết hàng\";\r\n          addButton.disabled = true;\r\n                }\r\n            alert(\"Sản phẩm đã được thêm vào giỏ hàng thành công\");\r\n            }\r\n        }\r\n  }\r\n};\r\n</script>\r\n\r\n<style>\r\n.category-section {\r\n  display: flex;\r\n  justify-content: center;\r\n  padding: 20px;\r\n  background-color: #f9f9f9;\r\n}\r\n\r\n.category-card {\r\n  display: flex;\r\n  flex-direction: column;\r\n  align-items: center;\r\n  width: 300px;\r\n  padding: 20px;\r\n  border-radius: 10px;\r\n  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);\r\n  background-color: #fff;\r\n  transition: transform 0.3s;\r\n}\r\n\r\n.category-card:hover {\r\n  transform: scale(1.05);\r\n}\r\n\r\n.product-image {\r\n  width: 100%;\r\n  height: auto;\r\n  border-radius: 8px;\r\n  margin-bottom: 15px;\r\n  cursor: pointer;\r\n}\r\n\r\n.product-info {\r\n  text-align: center;\r\n}\r\n\r\n.product-info h3 {\r\n  font-size: 20px;\r\n  margin: 10px 0;\r\n}\r\n\r\n.product-info p {\r\n  color: #666;\r\n  font-size: 16px;\r\n  margin: 10px 0;\r\n}\r\n\r\n.quantity-control {\r\n  display: flex;\r\n  align-items: center;\r\n  margin-top: 10px;\r\n}\r\n\r\n.quantity-control button {\r\n  background-color: #007bff;\r\n  color: white;\r\n  border: none;\r\n  padding: 5px 10px;\r\n  font-size: 18px;\r\n  cursor: pointer;\r\n  