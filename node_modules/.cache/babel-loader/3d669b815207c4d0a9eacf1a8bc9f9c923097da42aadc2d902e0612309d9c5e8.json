{"ast":null,"code":"import cart from \"@/data/cart\";\nexport default {\n  data() {\n    return {\n      cart: cart\n    };\n  },\n  computed: {\n    tongtien() {\n      return this.cart.reduce((total, item) => total + item.quantity * item.price, 0);\n    },\n    tongsoluong() {\n      return this.cart.reduce((total, item) => total + item.quantity, 0);\n    }\n  },\n  methods: {\n    increaseQuantity(item) {\n      if (item.quantity <= item.quanlity) {\n        // Kiểm tra số lượng còn lại trong kho\n        item.quantity += 1;\n        item.quanlity -= 1; // Giảm số lượng còn lại trong kho\n      } else {\n        alert(\"Không đủ số lượng sản phẩm trong kho\");\n      }\n    },\n    decreaseQuantity(item) {\n      if (item.quantity > 1) {\n        item.quantity -= 1;\n        item.quanlity += 1; // Tăng số lượng trong kho khi giảm số lượng\n      }\n    },\n    removeItem(itemId) {\n      this.cart = this.cart.filter(item => item.id !== itemId);\n    },\n    clearCart() {\n      this.cart.forEach(item => item.quanlity += item.quantity); // Khôi phục số lượng lại trong kho\n      this.cart = []; // Xóa hết giỏ hàng\n    }\n  }\n};","map":{"version":3,"names":["cart","data","computed","tongtien","reduce","total","item","quantity","price","tongsoluong","methods","increaseQuantity","quanlity","alert","decreaseQuantity","removeItem","itemId","filter","id","clearCart","forEach"],"sources":["D:\\Thứ 4\\food\\src\\components\\CardPage.vue"],"sourcesContent":["<template>\r\n  <div v-if=\"cart.length === 0\">\r\n    <p>Giỏ Hàng Bị Rỗng</p>\r\n  </div>\r\n  <div v-else class=\"modal-content\">\r\n    <table class=\"table\">\r\n      <thead>\r\n        <tr>\r\n          <th>HÌNH</th>\r\n          <th>SẢN PHẨM</th>\r\n          <th>Đơn giá</th>\r\n          <th>Số lượng</th>\r\n          <th>Tiền</th>\r\n          <th></th>\r\n        </tr>\r\n      </thead>\r\n      <tbody>\r\n        <tr v-for=\"item in cart\" :key=\"item.id\">\r\n          <td><img :src=\"item.image\" class=\"cart-image\" alt=\"Product Image\" /></td>\r\n          <td class=\"align-middle\">{{ item.title }}</td>\r\n          <td class=\"align-middle\">{{ item.price.toLocaleString() }} VNĐ</td>\r\n          <td class=\"align-middle\">\r\n            <div v-if=\"item.quanlity > 0\" class=\"quantity-controls\">\r\n              <button @click=\"decreaseQuantity(item)\">-</button>\r\n              <span>{{ item.quantity }}</span>\r\n              <button @click=\"increaseQuantity(item)\">+</button>\r\n            </div>\r\n            <div v-else class=\"out-of-stock\">Hết hàng</div> <!-- Hiển thị khi hết hàng -->\r\n          </td>\r\n          <td class=\"align-middle\">{{ (item.price * item.quantity).toLocaleString() }} VNĐ</td>\r\n          <td class=\"align-middle\">\r\n            <button @click=\"removeItem(item.id)\" class=\"btn btn-danger\">Xóa</button>\r\n          </td>\r\n        </tr>\r\n        <tr>\r\n          <td colspan=\"3\"></td>\r\n          <td>Số Lượng {{ tongsoluong }} </td>\r\n          <td>Tổng tiền {{ tongtien.toLocaleString() }} VNĐ</td>\r\n          <td>\r\n            <button @click=\"clearCart\" class=\"btn btn-danger\">Xóa hết</button>\r\n          </td>\r\n        </tr>\r\n      </tbody>\r\n      <div class=\"checkout-button\">\r\n        <router-link to=\"/BillPage\">\r\n          <button @click=\"openOrderForm\" class=\"btn btn-success\">Đặt Hàng</button>\r\n        </router-link>\r\n      </div>\r\n    </table>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport cart from \"@/data/cart\";\r\nexport default {\r\n  data() {\r\n    return {\r\n      cart: cart,\r\n      \r\n    };\r\n  },\r\n  computed: {\r\n    tongtien() {\r\n      return this.cart.reduce((total, item) => total + item.quantity * item.price, 0);\r\n    },\r\n    tongsoluong() {\r\n      return this.cart.reduce((total, item) => total + item.quantity, 0);\r\n    },\r\n  },\r\n  methods: {\r\n    increaseQuantity(item) {\r\n      if (item.quantity <= item.quanlity) { // Kiểm tra số lượng còn lại trong kho\r\n        item.quantity += 1;\r\n        item.quanlity -= 1; // Giảm số lượng còn lại trong kho\r\n      } else {\r\n        alert(\"Không đủ số lượng sản phẩm trong kho\");\r\n      }\r\n    },\r\n    decreaseQuantity(item) {\r\n      if (item.quantity > 1) {\r\n        item.quantity -= 1;\r\n        item.quanlity += 1; // Tăng số lượng trong kho khi giảm số lượng\r\n      }\r\n    },\r\n    removeItem(itemId) {\r\n      this.cart = this.cart.filter((item) => item.id !== itemId);\r\n    },\r\n    clearCart() {\r\n      this.cart.forEach(item => item.quanlity += item.quantity); // Khôi phục số lượng lại trong kho\r\n      this.cart = []; // Xóa hết giỏ hàng\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\np {\r\n  text-align: center;\r\n  font-size: 50px;\r\n}\r\n\r\n.table {\r\n  width: 100%;\r\n  border-collapse: collapse;\r\n}\r\n\r\n.table th,\r\n.table td {\r\n  text-align: center;\r\n  padding: 10px;\r\n  border: 1px solid #ddd;\r\n}\r\n\r\n.cart-image {\r\n  height: 100px;\r\n  width: 100px;\r\n  object-fit: cover;\r\n}\r\n\r\n.btn {\r\n  padding: 5px 10px;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n}\r\n\r\n.btn-danger {\r\n  background-color: #d9534f;\r\n  color: white;\r\n}\r\n\r\n.btn-danger:hover {\r\n  background-color: #c9302c;\r\n}\r\n\r\n.btn-success {\r\n  background-color: #5cb85c;\r\n  color: white;\r\n}\r\n\r\n.btn-success:hover {\r\n  background-color: #4cae4c;\r\n}\r\n\r\n.quantity-controls {\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  gap: 10px;\r\n}\r\n\r\n.quantity-controls button {\r\n  padding: 5px 10px;\r\n  background-color: #fcb034;\r\n  color: white;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n}\r\n\r\n.quantity-controls button:hover {\r\n  background-color: #e69526;\r\n}\r\n\r\n.out-of-stock {\r\n  color: red;\r\n  font-weight: bold;\r\n}\r\n\r\n.checkout-button {\r\n  text-align: center;\r\n  margin-top: 20px;\r\n}\r\n</style>\r\n"],"mappings":"AAqDA,OAAOA,IAAG,MAAO,aAAa;AAC9B,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLD,IAAI,EAAEA;IAER,CAAC;EACH,CAAC;EACDE,QAAQ,EAAE;IACRC,QAAQA,CAAA,EAAG;MACT,OAAO,IAAI,CAACH,IAAI,CAACI,MAAM,CAAC,CAACC,KAAK,EAAEC,IAAI,KAAKD,KAAI,GAAIC,IAAI,CAACC,QAAO,GAAID,IAAI,CAACE,KAAK,EAAE,CAAC,CAAC;IACjF,CAAC;IACDC,WAAWA,CAAA,EAAG;MACZ,OAAO,IAAI,CAACT,IAAI,CAACI,MAAM,CAAC,CAACC,KAAK,EAAEC,IAAI,KAAKD,KAAI,GAAIC,IAAI,CAACC,QAAQ,EAAE,CAAC,CAAC;IACpE;EACF,CAAC;EACDG,OAAO,EAAE;IACPC,gBAAgBA,CAACL,IAAI,EAAE;MACrB,IAAIA,IAAI,CAACC,QAAO,IAAKD,IAAI,CAACM,QAAQ,EAAE;QAAE;QACpCN,IAAI,CAACC,QAAO,IAAK,CAAC;QAClBD,IAAI,CAACM,QAAO,IAAK,CAAC,EAAE;MACtB,OAAO;QACLC,KAAK,CAAC,sCAAsC,CAAC;MAC/C;IACF,CAAC;IACDC,gBAAgBA,CAACR,IAAI,EAAE;MACrB,IAAIA,IAAI,CAACC,QAAO,GAAI,CAAC,EAAE;QACrBD,IAAI,CAACC,QAAO,IAAK,CAAC;QAClBD,IAAI,CAACM,QAAO,IAAK,CAAC,EAAE;MACtB;IACF,CAAC;IACDG,UAAUA,CAACC,MAAM,EAAE;MACjB,IAAI,CAAChB,IAAG,GAAI,IAAI,CAACA,IAAI,CAACiB,MAAM,CAAEX,IAAI,IAAKA,IAAI,CAACY,EAAC,KAAMF,MAAM,CAAC;IAC5D,CAAC;IACDG,SAASA,CAAA,EAAG;MACV,IAAI,CAACnB,IAAI,CAACoB,OAAO,CAACd,IAAG,IAAKA,IAAI,CAACM,QAAO,IAAKN,IAAI,CAACC,QAAQ,CAAC,EAAE;MAC3D,IAAI,CAACP,IAAG,GAAI,EAAE,EAAE;IAClB;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}