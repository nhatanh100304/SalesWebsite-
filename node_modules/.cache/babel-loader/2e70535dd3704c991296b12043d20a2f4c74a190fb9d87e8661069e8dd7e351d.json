{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport HeaderMenu from '@/components/HeaderMenu.vue';\nimport cart from '@/data/cart';\nimport items from '@/data/items';\nexport default {\n  components: {\n    HeaderMenu\n  },\n  data() {\n    return {\n      items: items,\n      // Sử dụng dữ liệu sản phẩm\n      cart: cart\n    };\n  },\n  methods: {\n    // Kiểm tra số lượng sản phẩm có đủ không\n    isOutOfStock(item) {\n      return item.quantity <= 0; // Kiểm tra nếu số lượng trong kho <= 0\n    },\n    addToCart(item) {\n      // Kiểm tra nếu sản phẩm còn hàng\n      if (item.quantity <= 0) {\n        alert(\"Sản phẩm đã hết hàng\");\n        return; // Dừng lại nếu sản phẩm hết hàng\n      }\n      const cartItem = this.cart.find(cartProduct => cartProduct.id === item.id);\n\n      // Kiểm tra nếu sản phẩm đã có trong giỏ hàng\n      if (cartItem) {\n        alert(\"Sản phẩm đã có trong giỏ hàng\");\n      } else {\n        this.cart.push({\n          ...item,\n          quantity: 1\n        }); // Thêm sản phẩm mới vào giỏ\n        alert(\"Sản phẩm đã được thêm vào giỏ hàng\");\n      }\n\n      // Giảm số lượng sản phẩm trong kho khi đã thêm vào giỏ hàng\n      item.quantity--;\n    }\n  }\n};","map":{"version":3,"names":["HeaderMenu","cart","items","components","data","methods","isOutOfStock","item","quantity","addToCart","alert","cartItem","find","cartProduct","id","push"],"sources":["D:\\Thứ 4\\food\\src\\components\\CategorySection.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    \r\n    <div>\r\n      <!-- Danh sách sản phẩm -->\r\n      <div class=\"product-list\">\r\n        <div \r\n          v-for=\"item in items\" \r\n          :key=\"item.id\" \r\n          class=\"product-card\">\r\n          \r\n          <img :src=\"item.image\" :alt=\"item.title\" />\r\n          <h3>{{ item.title }}</h3>\r\n          <p>{{ item.description }}</p>\r\n          <div class=\"product-price\">{{ item.price.toLocaleString() }} VNĐ</div>\r\n\r\n          <!-- Nút thêm vào giỏ, thay đổi nếu hết hàng -->\r\n          <button \r\n            @click=\"addToCart(item)\" \r\n            :disabled=\"isOutOfStock(item)\" \r\n            class=\"add-to-cart-button\">\r\n            {{ isOutOfStock(item) ? 'Hết hàng' : 'Thêm vào giỏ' }}\r\n          </button>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport HeaderMenu from '@/components/HeaderMenu.vue'\r\nimport cart from '@/data/cart';\r\nimport items from '@/data/items';\r\n\r\nexport default {\r\n  components: {\r\n    HeaderMenu,  \r\n  },\r\n  data() {\r\n    return {\r\n      items: items,  // Sử dụng dữ liệu sản phẩm\r\n      cart: cart, \r\n    };\r\n  },\r\n  methods: {\r\n    // Kiểm tra số lượng sản phẩm có đủ không\r\n    isOutOfStock(item) {\r\n      return item.quantity <= 0;  // Kiểm tra nếu số lượng trong kho <= 0\r\n    },\r\n\r\n    addToCart(item) {\r\n      // Kiểm tra nếu sản phẩm còn hàng\r\n      if (item.quantity <= 0) {\r\n        alert(\"Sản phẩm đã hết hàng\");\r\n        return; // Dừng lại nếu sản phẩm hết hàng\r\n      }\r\n\r\n      const cartItem = this.cart.find(cartProduct => cartProduct.id === item.id);\r\n\r\n      // Kiểm tra nếu sản phẩm đã có trong giỏ hàng\r\n      if (cartItem) {\r\n        alert(\"Sản phẩm đã có trong giỏ hàng\");\r\n      } else {\r\n        this.cart.push({ ...item, quantity: 1 }); // Thêm sản phẩm mới vào giỏ\r\n        alert(\"Sản phẩm đã được thêm vào giỏ hàng\");\r\n      }\r\n      \r\n      // Giảm số lượng sản phẩm trong kho khi đã thêm vào giỏ hàng\r\n      item.quantity--;\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n/* Danh sách sản phẩm */\r\n.product-list {\r\n  display: grid;\r\n  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));\r\n  gap: 20px;\r\n  padding: 20px;\r\n}\r\n\r\n/* Thẻ sản phẩm */\r\n.product-card {\r\n  background-color: #fff;\r\n  border: 1px solid #ddd;\r\n  border-radius: 8px;\r\n  padding: 15px;\r\n  text-align: center;\r\n  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);\r\n  transition: transform 0.3s ease, box-shadow 0.3s ease;\r\n  cursor: pointer;\r\n}\r\n\r\n.product-card:hover {\r\n  transform: scale(1.05);\r\n  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);\r\n}\r\n\r\n.product-card img {\r\n  width: 100%;\r\n  height: 180px;\r\n  object-fit: cover;\r\n  border-radius: 8px;\r\n  margin-bottom: 10px;\r\n}\r\n\r\n.product-card h3 {\r\n  font-size: 20px;\r\n  margin: 10px 0;\r\n  color: #333;\r\n}\r\n\r\n.product-card p {\r\n  font-size: 14px;\r\n  color: #555;\r\n}\r\n\r\n.product-card .product-price {\r\n  font-size: 16px;\r\n  color: #fcb034;\r\n  margin: 10px 0;\r\n}\r\n\r\n/* Nút thêm vào giỏ */\r\n.product-card button {\r\n  background-color: #fcb034;\r\n  color: white;\r\n  padding: 10px 20px;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n  font-size: 16px;\r\n}\r\n\r\n.product-card button:hover {\r\n  background-color: #e69526;\r\n}\r\n\r\n.product-card button:disabled {\r\n  background-color: #e0e0e0;\r\n  cursor: not-allowed;\r\n}\r\n</style>\r\n"],"mappings":";AA8BA,OAAOA,UAAS,MAAO,6BAA4B;AACnD,OAAOC,IAAG,MAAO,aAAa;AAC9B,OAAOC,KAAI,MAAO,cAAc;AAEhC,eAAe;EACbC,UAAU,EAAE;IACVH;EACF,CAAC;EACDI,IAAIA,CAAA,EAAG;IACL,OAAO;MACLF,KAAK,EAAEA,KAAK;MAAG;MACfD,IAAI,EAAEA;IACR,CAAC;EACH,CAAC;EACDI,OAAO,EAAE;IACP;IACAC,YAAYA,CAACC,IAAI,EAAE;MACjB,OAAOA,IAAI,CAACC,QAAO,IAAK,CAAC,EAAG;IAC9B,CAAC;IAEDC,SAASA,CAACF,IAAI,EAAE;MACd;MACA,IAAIA,IAAI,CAACC,QAAO,IAAK,CAAC,EAAE;QACtBE,KAAK,CAAC,sBAAsB,CAAC;QAC7B,OAAM,CAAE;MACV;MAEA,MAAMC,QAAO,GAAI,IAAI,CAACV,IAAI,CAACW,IAAI,CAACC,WAAU,IAAKA,WAAW,CAACC,EAAC,KAAMP,IAAI,CAACO,EAAE,CAAC;;MAE1E;MACA,IAAIH,QAAQ,EAAE;QACZD,KAAK,CAAC,+BAA+B,CAAC;MACxC,OAAO;QACL,IAAI,CAACT,IAAI,CAACc,IAAI,CAAC;UAAE,GAAGR,IAAI;UAAEC,QAAQ,EAAE;QAAE,CAAC,CAAC,EAAE;QAC1CE,KAAK,CAAC,oCAAoC,CAAC;MAC7C;;MAEA;MACAH,IAAI,CAACC,QAAQ,EAAE;IACjB;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[